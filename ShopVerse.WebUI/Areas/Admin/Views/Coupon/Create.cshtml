@model ShopVerse.Entities.Concrete.Coupon

@{
    ViewData["Title"] = "Yeni Kupon Oluştur";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="m-0"><i class="fas fa-ticket-alt me-2"></i>Yeni İndirim Kuponu</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post">

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Kupon Kodu</label>
                            <input asp-for="Code" class="form-control text-uppercase" placeholder="Örn: YAZ2026" required />
                            <small class="text-muted">Kod otomatik olarak büyük harfe çevrilir.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Son Kullanma Tarihi</label>
                            <input asp-for="ExpirationDate" type="text" class="form-control date-picker" placeholder="Tarih seçiniz..." required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Minimum Sepet Tutarı (TL)</label>
                            <input asp-for="MinCartAmount" type="number" step="0.01" class="form-control" value="0" />
                            <small class="text-muted">Alt limit yoksa 0 bırakın.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kapsam (Hangi Kategori?)</label>
                            <select asp-for="CategoryId" class="form-select">
                                <option value="">Tüm Mağazada Geçerli (Genel Kupon)</option>
                                @foreach (var cat in ViewBag.Categories as List<ShopVerse.Entities.Concrete.Category>)
                                {
                                    <option value="@cat.Id">Sadece @cat.Name Kategorisinde</option>
                                }
                            </select>
                            <small class="text-muted">Seçim yapmazsanız kupon tüm ürünlerde geçerli olur.</small>
                        </div>
                    </div>

                    <div class="col-md-6 bg-light p-3 rounded">

                        <div class="form-check form-switch mb-3">
                            <input asp-for="IsPercentage" class="form-check-input" type="checkbox" id="isPercentageSwitch" />
                            <label class="form-check-label fw-bold" for="isPercentageSwitch">Yüzdelik İndirim Uygula (%)</label>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold" id="discountLabel">İndirim Tutarı (TL)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white" id="currencySymbol">₺</span>
                                <input asp-for="DiscountAmount" type="number" step="0.01" class="form-control fw-bold fs-5 text-primary" required />
                            </div>
                        </div>

                        <div class="form-check form-switch mt-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label class="form-check-label fw-bold">Kupon Aktif Olsun</label>
                        </div>
                    </div>
                </div>

                <hr />
                <div class="d-flex justify-content-end gap-2">
                    <a href="/Admin/Coupon/Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-success fw-bold"><i class="fas fa-save me-2"></i>Kuponu Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/tr.js"></script>

    <script>
        // Tarih Seçici
        flatpickr(".date-picker", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            locale: "tr",
            time_24hr: true,
            minDate: "today" // Geçmiş tarih seçilemesin
        });

        // Yüzde/Tutar Switch Mantığı
        var switchBtn = document.getElementById("isPercentageSwitch");
        var label = document.getElementById("discountLabel");
        var symbol = document.getElementById("currencySymbol");

        function toggleType() {
            if (switchBtn.checked) {
                label.innerText = "İndirim Oranı (%)";
                symbol.innerText = "%";
                symbol.classList.add("text-primary");
            } else {
                label.innerText = "İndirim Tutarı (TL)";
                symbol.innerText = "₺";
                symbol.classList.remove("text-primary");
            }
        }

        switchBtn.addEventListener("change", toggleType);
        toggleType(); // Sayfa yüklendiğinde çalışsın
    </script>
}