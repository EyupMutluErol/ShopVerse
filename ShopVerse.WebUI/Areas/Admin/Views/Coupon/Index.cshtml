@model List<ShopVerse.Entities.Concrete.Coupon>

@{
    ViewData["Title"] = "Kupon Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark">İndirim Kuponları</h3>
        <a href="/Admin/Coupon/Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus me-2"></i>Yeni Kupon Oluştur
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Kod</th>
                        <th>İndirim</th>
                        <th>Min. Sepet Tutarı</th>
                        <th>Son Kullanma</th>
                        <th>Durum</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="badge bg-light text-dark border px-3 py-2 fw-bold" style="font-family: monospace; font-size: 1rem;">
                                    @item.Code
                                </span>
                            </td>
                            <td>
                                @if (item.IsPercentage)
                                {
                                    <span class="text-primary fw-bold">%@item.DiscountAmount.ToString("0")</span>
                                }
                                else
                                {
                                    <span class="text-success fw-bold">@item.DiscountAmount.ToString("C2")</span>
                                }
                            </td>
                            <td>@item.MinCartAmount.ToString("C2")</td>
                            <td>
                                @if (item.ExpirationDate < DateTime.Now)
                                {
                                    <span class="text-danger small"><i class="fas fa-clock me-1"></i>Süresi Doldu</span>
                                }
                                else
                                {
                                    <span>@item.ExpirationDate.ToString("dd.MM.yyyy")</span>
                                }
                            </td>
                            <td>
                                @if (item.IsActive && item.ExpirationDate >= DateTime.Now)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a href="/Admin/Coupon/Delete/@item.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Bu kuponu silmek istediğinize emin misiniz?')">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>