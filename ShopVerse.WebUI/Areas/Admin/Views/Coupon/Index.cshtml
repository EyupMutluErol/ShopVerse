@model List<ShopVerse.Entities.Concrete.Coupon>

@{
    ViewData["Title"] = "Kupon Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow mb-4 border-0">
        <div class="card-header py-3 bg-white d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary"><i class="fas fa-ticket-alt me-2"></i>Kupon Listesi</h6>
            <a href="/Admin/Coupon/Create" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm">
                <i class="fas fa-plus fa-sm"></i> Yeni Kupon Oluştur
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="dataTable" width="100%" cellspacing="0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="ps-4">KOD</th>
                            <th class="text-center">İndirim</th>
                            <th class="text-center">Min. Sepet</th>
                            <th class="text-center">Kapsam</th>
                            <th class="text-center">Son Kullanma</th>
                            <th class="text-center">Durum</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="fas fa-ticket-alt fa-3x mb-3 opacity-25"></i>
                                    <p>Henüz tanımlanmış bir kupon bulunmuyor.</p>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-primary">@item.Code</td>

                                    <td class="text-center">
                                        @if (item.IsPercentage)
                                        {
                                            <span class="badge bg-info text-dark">%@item.DiscountAmount</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@item.DiscountAmount.ToString("C0")</span>
                                        }
                                    </td>

                                    <td class="text-center text-muted small">
                                        @(item.MinCartAmount > 0 ? item.MinCartAmount.ToString("C0") : "-")
                                    </td>

                                    <td class="text-center">
                                        @if (item.UserId != null)
                                        {
                                            <span class="badge bg-warning text-dark" title="Kişiye Özel"><i class="fas fa-user"></i> Özel</span>
                                        }
                                        else if (item.CategoryId != null)
                                        {
                                            <span class="badge bg-secondary" title="@item.Category?.Name"><i class="fas fa-tags"></i> Kategori</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-dark"><i class="fas fa-globe"></i> Genel</span>
                                        }
                                    </td>

                                    <td class="text-center small @(item.ExpirationDate < DateTime.Now ? "text-danger fw-bold" : "")">
                                        @item.ExpirationDate.ToString("dd MMM yyyy HH:mm")
                                    </td>

                                    <td class="text-center">
                                        @if (item.IsActive && item.ExpirationDate > DateTime.Now)
                                        {
                                            <span class="badge bg-success rounded-pill">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger rounded-pill">Pasif</span>
                                        }
                                    </td>

                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a asp-controller="Coupon" asp-action="Update" asp-route-id="@item.Id"
                                               class="btn btn-outline-warning btn-sm rounded-circle shadow-sm"
                                               title="Düzenle">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <button onclick="deleteCoupon(@item.Id)"
                                                    class="btn btn-outline-danger btn-sm rounded-circle shadow-sm"
                                                    title="Sil">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function deleteCoupon(id) {
        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu kuponu silmek istediğinize emin misiniz? Bu işlem geri alınamaz!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'Vazgeç',
            background: '#fff',
            borderRadius: '15px'
        }).then((result) => {
            if (result.isConfirmed) {
                // Onay verilirse Controller'daki Delete action'ına yönlendir
                window.location.href = "/Admin/Coupon/Delete/" + id;
            }
        })
    }
</script>