@model ShopVerse.WebUI.Areas.Admin.Models.CampaignAddViewModel

@{
    ViewData["Title"] = "Yeni Kampanya";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link rel="stylesheet" type="text/css" href="https://npmcdn.com/flatpickr/dist/themes/material_blue.css">

<style>
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }

    .date-picker {
        cursor: pointer !important; 
        background-color: #fff !important; 
    }
</style>

<div class="container mt-4">

    <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm border-0 mb-4"></div>

    <div class="card shadow border-0 rounded-3">
        <div class="card-header bg-success text-white py-3 rounded-top-3">
            <h5 class="m-0 fw-bold"><i class="fas fa-plus-circle me-2"></i>Yeni Kampanya Oluştur</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div class="row">
                    <div class="col-md-8">

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label fw-bold"></label>
                            <input asp-for="Title" class="form-control form-control-lg" placeholder="Örn: Yaz Sonu İndirimleri" />
                            <span asp-validation-for="Title" class="text-danger small fw-bold mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Kampanya detaylarını buraya yazınız..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small fw-bold mt-1 d-block"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="StartDate" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="fas fa-calendar-alt text-primary"></i></span>
                                    <input asp-for="StartDate" type="text" class="form-control date-picker" placeholder="Başlangıç Seçin" readonly />
                                </div>
                                <span asp-validation-for="StartDate" class="text-danger small fw-bold mt-1 d-block"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label asp-for="EndDate" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="fas fa-calendar-check text-danger"></i></span>
                                    <input asp-for="EndDate" type="text" class="form-control date-picker" placeholder="Bitiş Seçin" readonly />
                                </div>
                                <span asp-validation-for="EndDate" class="text-danger small fw-bold mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="p-3 bg-light border rounded mb-3">
                            <h6 class="fw-bold text-muted mb-3"><i class="fas fa-tags me-2"></i>Fiyat Kısıtlamaları (Opsiyonel)</h6>
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <label asp-for="MinProductPrice" class="form-label fw-bold small">Min. Ürün Fiyatı</label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-white">₺</span>
                                        <input asp-for="MinProductPrice" type="number" class="form-control" placeholder="Boş bırakılabilir" step="0.01" />
                                    </div>
                                    <div class="form-text x-small text-muted mt-1" style="font-size: 0.75rem;">Bu fiyattan <u>düşük</u> ürünlere indirim uygulanmaz.</div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <label asp-for="MaxProductPrice" class="form-label fw-bold small">Max. Ürün Fiyatı</label>
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text bg-white">₺</span>
                                        <input asp-for="MaxProductPrice" type="number" class="form-control" placeholder="Boş bırakılabilir" step="0.01" />
                                    </div>
                                    <div class="form-text x-small text-muted mt-1" style="font-size: 0.75rem;">Bu fiyattan <u>yüksek</u> ürünlere indirim uygulanmaz.</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="bg-light p-4 rounded-3 h-100 border">

                            <div class="mb-4">
                                <label asp-for="DiscountPercentage" class="form-label fw-bold text-danger"></label>
                                <div class="input-group">
                                    <button class="btn btn-outline-secondary bg-white" type="button" onclick="updateDiscount(-1)">
                                        <i class="fas fa-minus"></i>
                                    </button>

                                    <input asp-for="DiscountPercentage" type="number" id="discountInput"
                                           class="form-control text-center fw-bold text-danger fs-5"
                                           min="1" max="100" value="10" />

                                    <button class="btn btn-outline-secondary bg-white" type="button" onclick="updateDiscount(1)">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="DiscountPercentage" class="text-danger small fw-bold mt-1 d-block"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="TargetCategoryId" class="form-label fw-bold"></label>
                                <select asp-for="TargetCategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">Tüm Site (Genel Kampanya)</option>
                                </select>
                                <div class="form-text small mt-1">Belirli bir kategori seçmezseniz genel kampanya olur.</div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="ImageFile" class="form-label fw-bold"></label>
                                <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                                <span asp-validation-for="ImageFile" class="text-danger small fw-bold mt-1 d-block"></span>
                            </div>

                            <div class="form-check form-switch p-3 bg-white border rounded">
                                <input asp-for="IsActive" class="form-check-input ms-0 me-3" type="checkbox" role="switch" checked style="transform: scale(1.3);" />
                                <label class="form-check-label fw-bold pt-1" asp-for="IsActive">Kampanya Yayında</label>
                            </div>

                        </div>
                    </div>
                </div>

                <hr class="my-4 text-muted opacity-25" />

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary px-4 fw-bold">
                        <i class="fas fa-times me-2"></i>İptal
                    </a>
                    <button type="submit" class="btn btn-success px-5 fw-bold shadow-sm">
                        <i class="fas fa-save me-2"></i>Kampanyayı Kaydet
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/tr.js"></script>

    <script>
        flatpickr(".date-picker", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            locale: "tr",
            time_24hr: true,
            minDate: "today",
            allowInput: false,
            disableMobile: "true"
        });

        function updateDiscount(amount) {
            var input = document.getElementById("discountInput");
            var currentVal = parseInt(input.value) || 0;
            var newVal = currentVal + amount;

            if (newVal >= 1 && newVal <= 100) {
                input.value = newVal;
            }
        }
    </script>
}