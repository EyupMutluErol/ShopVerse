@model List<ShopVerse.Entities.Concrete.Campaign>

@{
    ViewData["Title"] = "Kampanyalar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark">Kampanya Yönetimi</h3>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fas fa-plus me-2"></i>Yeni Kampanya Ekle
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Görsel</th>
                        <th>Başlık</th>
                        <th>İndirim</th>
                        <th>Hedef</th>
                        <th>Tarih Aralığı</th>
                        <th>Durum</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="rounded shadow-sm" style="width: 80px; height: 50px; object-fit: cover;" />
                                }
                                else
                                {
                                    <span class="text-muted small">Resim Yok</span>
                                }
                            </td>
                            <td class="fw-bold text-dark">@item.Title</td>
                            <td>
                                <span class="badge bg-danger rounded-pill">%@item.DiscountPercentage</span>
                            </td>
                            <td>
                                @if (item.TargetCategoryId != null)
                                {
                                    <span class="badge bg-info text-dark">Kategoriye Özel</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Genel</span>
                                }
                            </td>
                            <td class="small text-muted">
                                <div><i class="fas fa-calendar-alt me-1"></i> @item.StartDate.ToShortDateString()</div>
                                <div><i class="fas fa-flag-checkered me-1"></i> @item.EndDate.ToShortDateString()</div>
                            </td>
                            <td>
                                @if (item.IsActive && item.EndDate >= DateTime.Now)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pasif / Süresi Dolmuş</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2" title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <button type="button" onclick="confirmDelete(@item.Id)" class="btn btn-sm btn-danger" title="Sil">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu kampanyayı silmek istediğinize emin misiniz? Bu işlem geri alınamaz!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545', // Kırmızı (Danger)
                cancelButtonColor: '#6c757d',  // Gri (Secondary)
                confirmButtonText: 'Evet, Sil!',
                cancelButtonText: 'Vazgeç',
                reverseButtons: true // Butonların yerini değiştirir (İptal solda, Sil sağda)
            }).then((result) => {
                if (result.isConfirmed) {
                    // Onay verilirse silme action'ına yönlendir
                    window.location.href = "/Admin/Campaign/Delete/" + id;
                }
            })
        }
    </script>
}