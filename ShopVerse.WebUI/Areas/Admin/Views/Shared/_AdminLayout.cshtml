<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopVerse Admin</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #00c6ff 0%, #0072ff 100%);
            --sidebar-width: 260px;
            --body-bg: #f5f7fa;
            --text-dark: #2d3436;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--body-bg);
            overflow-x: hidden;
        }

        /* --- NAVBAR TASARIMI --- */
        .admin-navbar {
            background: var(--primary-gradient);
            box-shadow: 0 4px 20px rgba(0, 114, 255, 0.25);
            padding: 15px 20px;
            z-index: 1000;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.4rem;
            color: white !important;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .brand-icon-box {
            background: white;
            color: #0072ff;
            width: 35px;
            height: 35px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .wrapper {
            display: flex;
            min-height: calc(100vh - 70px); 
        }

        .sidebar {
            min-width: var(--sidebar-width);
            max-width: var(--sidebar-width);
            background: #ffffff;
            color: #555;
            box-shadow: 4px 0 20px rgba(0,0,0,0.03);
            padding: 20px;
            transition: all 0.3s;
            z-index: 999;
        }

        .sidebar-header {
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #adb5bd;
            font-weight: 700;
            margin-bottom: 15px;
            padding-left: 10px;
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            color: #555;
            text-decoration: none;
            border-radius: 12px;
            font-weight: 500;
            margin-bottom: 8px;
            transition: all 0.2s ease-in-out;
        }

            .sidebar-link i {
                width: 25px;
                font-size: 1.1rem;
                margin-right: 10px;
                transition: transform 0.2s;
            }

            .sidebar-link:hover {
                background-color: #f8f9fa;
                color: #0072ff;
                transform: translateX(5px);
            }

            .sidebar-link.active {
                background: var(--primary-gradient);
                color: white;
                box-shadow: 0 4px 15px rgba(0, 114, 255, 0.3);
            }

                .sidebar-link.active i {
                    color: white;
                }

        .content {
            flex: 1;
            padding: 30px;
            width: 100%;
        }

        .btn-glass {
            background: rgba(255,255,255,0.2);
            border: 1px solid rgba(255,255,255,0.3);
            color: white;
            border-radius: 50px;
            padding: 5px 15px;
            font-size: 0.9rem;
            transition: all 0.2s;
        }

            .btn-glass:hover {
                background: white;
                color: #0072ff;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-dark admin-navbar sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Admin/Dashboard">
                <div class="brand-icon-box">
                    <i class="fas fa-user-shield"></i>
                </div>
                ShopVerse
            </a>

            <div class="d-flex align-items-center gap-3">
                <span class="text-white small d-none d-md-inline opacity-75">Hoş geldin, Admin</span>

                <a href="/" class="btn btn-glass">
                    <i class="fas fa-external-link-alt me-2"></i>Siteye Git
                </a>

                <a href="/Account/Logout" class="btn btn-light rounded-circle shadow-sm" style="width: 35px; height: 35px; display: flex; align-items: center; justify-content: center; color: #ff4757;" title="Çıkış Yap">
                    <i class="fas fa-power-off"></i>
                </a>
            </div>
        </div>
    </nav>

    <div class="wrapper">
        <nav class="sidebar">
            <div class="sidebar-header">Genel</div>

            @{
                string path = Context.Request.Path;
            }

            <div class="d-flex flex-column">
                <a href="/Admin/Dashboard" class="sidebar-link @(path.StartsWith("/Admin/Dashboard") ? "active" : "")">
                    <i class="fas fa-home"></i> Dashboard
                </a>

                <div class="sidebar-header mt-3">Yönetim</div>

                <a href="/Admin/Category" class="sidebar-link @(path.StartsWith("/Admin/Category") ? "active" : "")">
                    <i class="fas fa-layer-group"></i> Kategoriler
                </a>

                <a href="/Admin/Product" class="sidebar-link @(path.StartsWith("/Admin/Product") ? "active" : "")">
                    <i class="fas fa-box-open"></i> Ürünler
                </a>

                <a href="/Admin/Order" class="sidebar-link @(path.StartsWith("/Admin/Order") ? "active" : "")">
                    <i class="fas fa-shopping-cart"></i> Siparişler
                    @if (ViewBag.PendingOrders > 0)
                    {
                        <span class="badge bg-danger rounded-pill ms-auto" style="font-size: 0.7rem;">@ViewBag.PendingOrders</span>
                    }
                </a>

                <div class="sidebar-header mt-3">Kullanıcılar</div>

                <a href="/Admin/User/Admins" class="sidebar-link @(path.StartsWith("/Admin/User/Admins") ? "active" : "")">
                    <i class="fas fa-user-shield text-primary"></i> Yöneticiler
                </a>

                <a href="/Admin/User/Members" class="sidebar-link @(path.StartsWith("/Admin/User/Members") ? "active" : "")">
                    <i class="fas fa-users text-success"></i> Üyeler
                </a>

                <a href="/Admin/Role" class="sidebar-link @(path.StartsWith("/Admin/Role") ? "active" : "")">
                    <i class="fas fa-user-tag text-warning"></i> Roller
                </a>
            </div>
        </nav>

        <div class="content">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>