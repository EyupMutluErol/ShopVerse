<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopVerse Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body { display: flex; min-height: 100vh; flex-direction: column; }
        .wrapper { display: flex; flex: 1; }
        .sidebar { min-width: 250px; background: #343a40; color: white; min-height: 100vh; }
        .sidebar a { color: #cfd8dc; text-decoration: none; padding: 10px 15px; display: block; }
        .sidebar a:hover { background: #495057; color: white; }
        .content { flex: 1; padding: 20px; }
    </style>
</head>
<body>

    <nav class="navbar navbar-dark bg-dark px-3">
        <a class="navbar-brand" href="/Admin/Dashboard">ShopVerse <b>Admin</b></a>
        <div class="ms-auto">
            <a href="/" target="_blank" class="btn btn-outline-light btn-sm">Siteye Git <i class="fas fa-external-link-alt"></i></a>
            <a href="/Account/Logout" class="btn btn-danger btn-sm ms-2">Çıkış Yap</a>
        </div>
    </nav>

    <div class="wrapper">
        <div class="sidebar p-3">
            <h5 class="mb-3 border-bottom pb-2">Menü</h5>
            <ul class="list-unstyled">
                <li><a href="/Admin/Dashboard"><i class="fas fa-home me-2"></i> Dashboard</a></li>
                <li><a href="/Admin/Category"><i class="fas fa-list me-2"></i> Kategoriler</a></li>
                <li><a href="/Admin/Product"><i class="fas fa-box me-2"></i> Ürünler</a></li>
                <li><a href="/Admin/Order"><i class="fas fa-shopping-cart me-2"></i> Siparişler</a></li>
                <li><a href="/Admin/User"><i class="fas fa-users me-2"></i> Kullanıcılar</a></li>
                <li><a href="/Admin/Role"><i class="fas fa-user-shield me-2"></i> Roller</a></li>
            </ul>
        </div>

        <div class="content bg-light">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>