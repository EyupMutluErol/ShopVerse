@model ShopVerse.WebUI.Areas.Admin.Models.RoleAssignViewModel

@{
    ViewData["Title"] = "Rol Ata";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="m-0"><i class="fas fa-user-edit me-2"></i>Rol Düzenle: @Model.UserName</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AssignRole" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="UserName" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kullanıcı Rolleri</label>
                            @for (int i = 0; i < Model.Roles.Count; i++)
                            {
                                <div class="form-check">
                                    <input type="hidden" asp-for="@Model.Roles[i].RoleId" />
                                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                                    <input asp-for="@Model.Roles[i].Exists" class="form-check-input" type="checkbox" />
                                    <label class="form-check-label" for="@Model.Roles[i].Exists">
                                        @Model.Roles[i].RoleName
                                    </label>
                                </div>
                            }
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Kaydet</button>

                            <a href="javascript:void(0);" onclick="history.back()" class="btn btn-secondary">
                                İptal
                            </a>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>