@model List<CategoryListViewModel>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Kategori Listesi</h6>
        <a asp-action="Add" asp-controller="Category" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Yeni Kategori
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 100px;">Resim</th>
                        <th style="width: 50px;">#</th>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                        <th style="width: 150px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" width="60" height="60" class="rounded border" style="object-fit: cover;" alt="@item.Name" />
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary text-white">Resim Yok</span>
                                    }
                                </td>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                       onclick="return confirm('@item.Name kategorisini silmek istediğinize emin misiniz?');" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted bg-light">
                                <i class="fas fa-layer-group fa-3x mb-3 opacity-25"></i>
                                <p class="mb-0 fw-bold">Henüz hiç kategori eklenmemiş.</p>
                                <small>Ürünlerinizi düzenlemek için kategori oluşturun.</small>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>