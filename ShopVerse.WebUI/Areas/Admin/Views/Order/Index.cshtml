@using ShopVerse.Entities.Enums
@model List<ShopVerse.Entities.Concrete.Order>

@{
    ViewData["Title"] = "Sipariş Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<style>
    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }

    .card-header {
        background-color: white;
        border-bottom: 1px solid #f0f0f0;
        padding: 20px;
        border-radius: 12px 12px 0 0 !important;
    }

    .table thead th {
        font-weight: 600;
        font-size: 0.85rem;
        color: #6c757d;
        border-bottom: 2px solid #f0f0f0;
        text-transform: uppercase;
        padding: 15px;
    }

    .table tbody td {
        vertical-align: middle;
        padding: 15px;
        color: #333;
        font-size: 0.95rem;
        border-bottom: 1px solid #f8f9fa;
    }

    .badge-status {
        padding: 6px 12px;
        border-radius: 30px;
        font-weight: 600;
        font-size: 0.75rem;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .badge-pending {
        background: #fff3cd;
        color: #856404;
        border: 1px solid #ffecb5;
    }

    .badge-approved {
        background: #d1e7dd;
        color: #0f5132;
        border: 1px solid #badbcc;
    }

    .badge-shipped {
        background: #cfe2ff;
        color: #084298;
        border: 1px solid #b6d4fe;
    }

    .badge-delivered {
        background: #d1e7dd;
        color: #198754;
        border: 1px solid #a3cfbb;
    }

    .badge-canceled {
        background: #f8d7da;
        color: #842029;
        border: 1px solid #f5c2c7;
    }

    .badge-refunded {
        background: #e2e3e5;
        color: #41464b;
        border: 1px solid #d3d6d8;
    }
</style>

<div class="container-fluid mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark m-0">Sipariş Yönetimi</h3>
        <span class="badge bg-primary rounded-pill px-3 py-2 fs-6 shadow-sm">
            <i class="fas fa-shopping-bag me-2"></i>@(Model != null ? Model.Count : 0) Toplam Sipariş
        </span>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="m-0 fw-bold text-primary"><i class="fas fa-list me-2"></i>Sipariş Listesi</h5>

            <button class="btn btn-sm btn-outline-secondary rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#filterModal">
                <i class="fas fa-filter me-1"></i> Filtrele
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">SİPARİŞ NO</th>
                            <th>TARİH</th>
                            <th>MÜŞTERİ</th>
                            <th>TUTAR</th>
                            <th class="text-center">DURUM</th>
                            <th class="text-end pe-4" style="min-width: 150px;">İŞLEMLER</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <a href="/Admin/Order/Detail/@item.Id" class="text-decoration-none fw-bold text-primary">
                                            #@item.OrderNumber
                                        </a>
                                    </td>

                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold text-dark small">@item.OrderDate.ToString("dd.MM.yyyy")</span>
                                            <small class="text-muted" style="font-size: 0.75rem;">@item.OrderDate.ToString("HH:mm")</small>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-2 border"
                                                 style="width: 40px; height: 40px; flex-shrink: 0;">
                                                <i class="fas fa-user text-secondary"></i>
                                            </div>
                                            <div class="d-flex flex-column" style="max-width: 180px;">
                                                <span class="fw-bold text-dark small text-truncate">
                                                    @(string.IsNullOrEmpty(item.FullName) ? "Misafir Müşteri" : item.FullName)
                                                </span>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="fw-bold text-dark">@item.TotalPrice.ToString("C2")</td>

                                    <td class="text-center">
                                        @{
                                            string badgeClass = "badge-pending";
                                            string statusText = "Beklemede";
                                            string icon = "fa-clock";

                                            switch (item.OrderStatus)
                                            {
                                                case OrderStatus.Pending:
                                                    badgeClass = "badge-pending"; statusText = "Beklemede"; icon = "fa-clock"; break;
                                                case OrderStatus.Approved:
                                                    badgeClass = "badge-approved"; statusText = "Onaylandı"; icon = "fa-check"; break;
                                                case OrderStatus.Shipped:
                                                    badgeClass = "badge-shipped"; statusText = "Kargoda"; icon = "fa-shipping-fast"; break;
                                                case OrderStatus.Delivered:
                                                    badgeClass = "badge-delivered"; statusText = "Teslim Edildi"; icon = "fa-box-open"; break;
                                                case OrderStatus.Canceled:
                                                    badgeClass = "badge-canceled"; statusText = "İptal Edildi"; icon = "fa-times"; break;
                                                case OrderStatus.Refunded:
                                                    badgeClass = "badge-refunded"; statusText = "İade Edildi"; icon = "fa-undo"; break;
                                            }
                                        }
                                        <span class="badge-status @badgeClass">
                                            <i class="fas @icon"></i> @statusText
                                        </span>
                                    </td>

                                    <td class="text-end pe-4">
                                        <a asp-action="Detail" asp-controller="Order" asp-area="Admin" asp-route-id="@item.Id"
                                           class="btn btn-sm btn-primary rounded-pill px-3 shadow-sm">
                                            <i class="fas fa-edit me-1"></i> Yönet
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-muted bg-light">
                                    <div class="d-flex flex-column align-items-center">
                                        <i class="fas fa-shopping-cart fa-3x mb-3 opacity-25"></i>
                                        <p class="mb-0 fw-bold">Henüz hiç sipariş alınmadı.</p>
                                        <small>Siparişler gelmeye başladığında burada listelenecek.</small>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="filterModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-light">
                <h5 class="modal-title fw-bold"><i class="fas fa-filter text-primary me-2"></i>Siparişleri Filtrele</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body p-4">
                <form asp-action="Index" method="get" id="filterForm">

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">Arama (Sipariş No)</label>
                        <input type="text" name="search" class="form-control" placeholder="#SP-..." value="@ViewBag.CurrentSearch">
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">Sipariş Durumu</label>
                        <select name="status" class="form-select">
                            <option value="">Tümü</option>
                            <!option value="Pending" @(ViewBag.CurrentStatus == "Pending" ? "selected" : "")>Beklemede</!option>
                            <!option value="Approved" @(ViewBag.CurrentStatus == "Approved" ? "selected" : "")>Onaylandı</!option>
                            <!option value="Shipped" @(ViewBag.CurrentStatus == "Shipped" ? "selected" : "")>Kargoda</!option>
                            <!option value="Delivered" @(ViewBag.CurrentStatus == "Delivered" ? "selected" : "")>Teslim Edildi</!option>
                            <!option value="Cancelled" @(ViewBag.CurrentStatus == "Cancelled" ? "selected" : "")>İptal Edildi</!option>
                            <!option value="Refunded" @(ViewBag.CurrentStatus == "Refunded" ? "selected" : "")>İade Edildi</!option>
                        </select>
                    </div>

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold small text-muted">Başlangıç</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fas fa-calendar-alt text-muted"></i></span>
                                <input type="text" name="startDate" class="form-control date-filter" placeholder="Seçiniz" value="@ViewBag.StartDate">
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label fw-bold small text-muted">Bitiş</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fas fa-calendar-alt text-muted"></i></span>
                                <input type="text" name="endDate" class="form-control date-filter" placeholder="Seçiniz" value="@ViewBag.EndDate">
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-check me-2"></i>Uygula
                        </button>
                        <a href="/Admin/Order/Index" class="btn btn-outline-secondary">
                            <i class="fas fa-undo me-2"></i>Temizle
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/tr.js"></script>

    <script>
        flatpickr(".date-filter", {
            dateFormat: "Y-m-d",
            locale: "tr",
            enableTime: false
        });
    </script>
}