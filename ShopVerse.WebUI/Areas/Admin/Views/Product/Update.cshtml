@using ShopVerse.WebUI.Areas.Admin.Models
@model ProductUpdateViewModel

@{
    ViewData["Title"] = "Ürün Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<div class="container mt-4">

    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <div class="card shadow border-0 mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold"><i class="fas fa-edit me-2"></i>Ürün Güncelle: @Model.Name</h6>
        </div>
        <div class="card-body">
            <form asp-action="Update" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ExistingImageUrl" />

                <div class="row">
                    <div class="col-md-8">

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small fw-bold"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger small fw-bold"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Price" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text">₺</span>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small fw-bold"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="DiscountRate" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text">%</span>
                                    <input asp-for="DiscountRate" type="number" class="form-control" min="0" max="100" />
                                </div>
                                <span asp-validation-for="DiscountRate" class="text-danger small fw-bold"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Stock" class="form-label fw-bold"></label>
                                <input asp-for="Stock" type="number" class="form-control" />

                                <span asp-validation-for="Stock" class="text-danger small fw-bold"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold">Kategori</label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>
                            <span asp-validation-for="CategoryId" class="text-danger small fw-bold"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card bg-light border-0">
                            <div class="card-body">
                                <div class="mb-3 text-center">
                                    <label class="form-label fw-bold d-block">Mevcut Görsel</label>
                                    @if (!string.IsNullOrEmpty(Model.ExistingImageUrl))
                                    {
                                        <img src="@Model.ExistingImageUrl" class="img-thumbnail mb-2 shadow-sm" style="max-height: 180px; object-fit: contain;" />
                                    }
                                    else
                                    {
                                        <div class="alert alert-secondary py-2 small">Görsel Yok</div>
                                    }
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ImageFile" class="form-label fw-bold small">Görseli Değiştir (Opsiyonel)</label>
                                    <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                                    <span asp-validation-for="ImageFile" class="text-danger small fw-bold"></span>
                                </div>

                                <hr />

                                <div class="form-check form-switch mb-2">
                                    <input class="form-check-input" type="checkbox" asp-for="IsHome">
                                    <label class="form-check-label fw-bold" asp-for="IsHome">Anasayfada Göster</label>
                                </div>

                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="IsActive">
                                    <label class="form-check-label fw-bold" asp-for="IsActive">Satışta (Aktif)</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-warning fw-bold px-4">
                        <i class="fas fa-save me-2"></i> Güncelle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}