@using ShopVerse.Entities.Concrete
@model List<ProductListViewModel>

@{
    ViewData["Title"] = "Ürün Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="fw-bold text-dark mb-0">Ürün Listesi</h4>
    <a asp-action="Add" asp-controller="Product" class="btn btn-primary shadow-sm">
        <i class="fas fa-plus me-2"></i>Yeni Ürün
    </a>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body p-3 bg-light rounded">
        <form method="get" action="/Admin/Product/Index">
            <div class="row g-2">

                <div class="col-md-4">
                    <label class="form-label small text-muted fw-bold mb-1">Ürün Adı</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                        <input type="text" name="search" value="@ViewBag.Search" class="form-control border-start-0 ps-0" placeholder="Ara...">
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="form-label small text-muted fw-bold mb-1">Kategori</label>
                    <select name="categoryId" class="form-select" asp-items="@ViewBag.CategoryList">
                        <option value="">Tüm Kategoriler</option>
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label small text-muted fw-bold mb-1">Durum</label>
                    <select name="status" class="form-select">
                        <option value="">Tüm Durumlar</option>
                        @if (ViewBag.Status == "active")
                        {
                            <option value="active" selected>Aktif</option>
                        }
                        else
                        {
                            <option value="active">Aktif</option>
                        }
                        @if (ViewBag.Status == "passive")
                        {
                            <option value="passive" selected>Pasif</option>
                        }
                        else
                        {
                            <option value="passive">Pasif</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label d-block mb-1">&nbsp;</label>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-dark flex-grow-1">
                            <i class="fas fa-filter me-1"></i> Filtrele
                        </button>
                        <a href="/Admin/Product/Index" class="btn btn-outline-secondary" title="Temizle">
                            <i class="fas fa-undo"></i>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">Görsel</th>
                        <th>Ürün Adı</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Durum</th>
                        <th style="width: 120px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" width="50" height="50" style="object-fit: cover;" class="rounded border" />
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Resim Yok</span>
                                    }
                                </td>
                                <td>@item.Name</td>
                                <td><span class="badge bg-info text-dark">@item.CategoryName</span></td>
                                <td>@item.Price.ToString("C2")</td>
                                <td>
                                    @if (item.Stock < 10 && item.Stock > 0)
                                    {
                                        <span class="text-warning fw-bold">@item.Stock (Azaldı)</span>
                                    }
                                    else if (item.Stock == 0)
                                    {
                                        <span class="text-danger fw-bold">Tükendi</span>
                                    }
                                    else
                                    {
                                        <span>@item.Stock</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsHome)
                                    {
                                        <span class="badge bg-success" title="Anasayfada"><i class="fas fa-home"></i></span>
                                    }
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-primary" title="Satışta"><i class="fas fa-check"></i></span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger" title="Pasif"><i class="fas fa-times"></i></span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted bg-light">
                                <i class="fas fa-box-open fa-3x mb-3 opacity-25"></i>
                                <p class="mb-0 fw-bold">Kriterlere uygun ürün bulunamadı.</p>
                                <small>Arama filtrelerini değiştirebilir veya yeni ürün ekleyebilirsiniz.</small>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>