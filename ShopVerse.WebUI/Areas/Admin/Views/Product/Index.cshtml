@model List<ProductListViewModel>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Ürün Listesi</h6>
        <a asp-action="Add" asp-controller="Product" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Yeni Ürün
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">Görsel</th>
                        <th>Ürün Adı</th>
                        <th>Kategori</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Durum</th>
                        <th style="width: 120px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" width="50" height="50" style="object-fit: cover;" class="rounded border" />
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Resim Yok</span>
                                }
                            </td>
                            <td>@item.Name</td>
                            <td><span class="badge bg-info text-dark">@item.CategoryName</span></td>
                            <td>@item.Price.ToString("C2")</td>
                            <td>
                                @if (item.Stock < 10 && item.Stock > 0)
                                {
                                    <span class="text-warning fw-bold">@item.Stock (Azaldı)</span>
                                }
                                else if (item.Stock == 0)
                                {
                                    <span class="text-danger fw-bold">Tükendi</span>
                                }
                                else
                                {
                                    <span>@item.Stock</span>
                                }
                            </td>
                            <td>
                                @if (item.IsHome)
                                {
                                    <span class="badge bg-success" title="Anasayfada"><i class="fas fa-home"></i></span>
                                }
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-primary" title="Satışta"><i class="fas fa-check"></i></span>
                                }
                                else
                                {
                                    <span class="badge bg-danger" title="Pasif"><i class="fas fa-times"></i></span>
                                }
                            </td>
                            <td>
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>