<style>
    /* İkon Kutusu Stili */
    .icon-box {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    /* Hover Efektleri */
    .hover-scale {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-scale:hover {
            transform: translateY(-10px);
            box-shadow: 0 1rem 3rem rgba(0,0,0,.175) !important;
        }

    .hover-top {
        transition: transform 0.3s ease;
    }

        .hover-top:hover {
            transform: translateY(-5px);
        }

    /* Metin Aralığı */
    .ls-md {
        letter-spacing: 2px;
    }

    /* Logo Grayscale Efekti */
    .grayscale-logos i {
        transition: all 0.3s ease;
    }

        .grayscale-logos i:hover {
            color: var(--bs-primary);
            transform: scale(1.1);
            opacity: 1;
        }
</style>