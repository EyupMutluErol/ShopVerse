@using ShopVerse.Entities.Concrete
@model List<Product>

@{
    ViewData["Title"] = "Anasayfa";
}

<div class="text-center mb-5">
    <h1 class="display-4 fw-bold">Hoş Geldiniz</h1>
    <p class="lead text-muted">En yeni ürünleri keşfedin.</p>
</div>

<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 product-card border-0 shadow-sm">

                <div class="position-relative">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 250px; object-fit: cover;">
                    </a>

                    @if (item.DiscountRate > 0)
                    {
                        <span class="position-absolute top-0 start-0 badge bg-danger m-2">
                            %@item.DiscountRate İndirim
                        </span>
                    }
                </div>

                <div class="card-body d-flex flex-column">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                        <h5 class="card-title text-truncate" title="@item.Name">@item.Name</h5>
                    </a>

                    <div class="mt-auto">
                        @if (item.DiscountRate > 0)
                        {
                            <small class="text-muted text-decoration-line-through">@item.Price.ToString("C2")</small>
                            <span class="fw-bold text-danger fs-5 ms-2">@item.PriceWithDiscount.ToString("C2")</span>
                        }
                        else
                        {
                            <span class="fw-bold fs-5 text-dark">@item.Price.ToString("C2")</span>
                        }
                    </div>
                </div>

                <div class="card-footer bg-white border-0 pb-3">
                    <div class="d-grid gap-2">
                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-dark">
                            <i class="fas fa-search"></i> İncele
                        </a>

                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                            <input type="hidden" name="productId" value="@item.Id" />
                            <input type="hidden" name="quantity" value="1" /> <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-cart-plus"></i> Sepete Ekle
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.Count == 0)
{
    <div class="alert alert-warning text-center">
        Henüz anasayfada gösterilecek bir ürün bulunmuyor. Admin panelinden ekleyebilirsiniz.
    </div>
}