@model ShopVerse.WebUI.Models.HomeViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var selectedCats = ViewData["SelectedCategories"] as List<int>;

    // Controller'dan gelen Aktif (Kişiye Özel veya Genel) Kuponlar
    var activeCoupons = ViewBag.ActiveCoupons as List<ShopVerse.Entities.Concrete.Coupon>;
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #ffffff;
    }

    :root {
        --blue-primary: #0072ff;
        --blue-light: #e3f2fd;
        --blue-gradient: linear-gradient(135deg, #00c6ff 0%, #0072ff 100%);
    }

    /* ... Diğer CSS kodları aynen kalıyor ... */

    .top-announcement-strip {
        background-color: #f9ca24;
        color: #2d3436;
        height: 40px;
        font-size: 0.85rem;
        font-weight: 600;
        overflow: hidden;
    }

    .announcement-text {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .announcement-text i {
            color: #2d3436;
            font-size: 1.1em;
        }

    .smart-filter-bar {
        background: white;
        padding: 20px 0;
        box-shadow: 0 4px 20px rgba(0,0,0,0.02);
        position: sticky;
        top: 0;
        z-index: 1000;
        border-bottom: 1px solid #f0f0f0;
    }

    .search-filter-wrapper {
        position: relative;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }

    .main-search-input {
        border: 2px solid #f0f0f0;
        border-radius: 50px;
        padding: 12px 25px;
        padding-right: 150px;
        height: 55px;
        width: 100%;
        font-size: 1rem;
        background-color: #fcfcfc;
        transition: all 0.3s;
    }

        .main-search-input:focus {
            border-color: var(--blue-primary);
            background-color: #fff;
            box-shadow: 0 0 0 4px rgba(0, 114, 255, 0.1);
            outline: none;
        }

    .search-actions {
        position: absolute;
        right: 5px;
        top: 5px;
        height: 45px;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .btn-filter-toggle {
        background: #f1f2f6;
        color: #2d3436;
        border: none;
        border-radius: 50px;
        padding: 0 20px;
        height: 100%;
        font-weight: 600;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        transition: all 0.2s;
    }

        .btn-filter-toggle:hover, .btn-filter-toggle[aria-expanded="true"] {
            background: var(--blue-light);
            color: var(--blue-primary);
        }

    .btn-search-submit {
        background: var(--blue-gradient);
        color: white;
        border: none;
        border-radius: 50px;
        width: 45px;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }

        .btn-search-submit:hover {
            background: #0069d9;
            transform: scale(1.05);
        }

    .filter-dropdown-menu {
        position: absolute;
        top: 115%;
        left: 0;
        width: 100%;
        background: white;
        border-radius: 24px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.12);
        border: 1px solid #f0f0f0;
        display: none;
        z-index: 1001;
        overflow: hidden;
        animation: slideDown 0.25s ease-out;
    }

        .filter-dropdown-menu.show {
            display: block;
        }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .category-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        max-height: 220px;
        overflow-y: auto;
        padding-right: 5px;
    }

    .cat-checkbox-hidden {
        display: none;
    }

    .cat-chip-label {
        display: inline-flex;
        align-items: center;
        padding: 8px 16px;
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 50px;
        font-size: 0.9rem;
        color: #555;
        cursor: pointer;
        transition: all 0.2s;
        user-select: none;
    }

        .cat-chip-label:hover {
            background: #e9ecef;
        }

    .cat-checkbox-hidden:checked + .cat-chip-label {
        background: var(--blue-light);
        border-color: var(--blue-primary);
        color: var(--blue-primary);
        font-weight: 600;
    }

    .hero-slider-container {
        margin-top: 30px;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 40px rgba(0,0,0,0.08);
        height: 450px;
        position: relative;
    }

    .carousel-item {
        height: 450px;
        position: relative;
    }

    .slider-bg-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        position: absolute;
        top: 0;
        left: 0;
        z-index: 0;
    }

    .slider-content {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        background: rgba(0,0,0,0.4);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        padding: 0 20px;
    }

    .slider-cta-btn {
        display: inline-block;
        padding: 12px 40px;
        font-weight: 600;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
        margin-top: 20px;
        background: white;
        color: #333;
        text-decoration: none;
        border: none;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        transition: transform 0.2s;
    }

        .slider-cta-btn:hover {
            transform: scale(1.05);
            color: #000;
        }

    .custom-carousel-control {
        width: 50px;
        height: 50px;
        background: rgba(255,255,255,0.3);
        border-radius: 50%;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        opacity: 1;
        margin: 0 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(255,255,255,0.5);
        cursor: pointer;
        z-index: 20;
        color: white;
    }

    .product-card {
        background: white;
        border-radius: 12px;
        border: 1px solid #f0f0f0;
        transition: all 0.3s;
        overflow: hidden;
        height: 100%;
        box-shadow: 0 5px 15px rgba(0,0,0,0.03);
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 114, 255, 0.15);
            border-color: var(--blue-primary);
        }

    .product-img-container {
        height: 220px;
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fdfdfd;
        position: relative;
    }
</style>

<div class="top-announcement-strip">
    <div class="container h-100">
        <div id="announcementCarousel" class="carousel slide h-100" data-bs-ride="carousel">
            <div class="carousel-inner h-100">

                <div class="carousel-item active h-100">
                    <div class="announcement-text">
                        <i class="fas fa-truck"></i>
                        <span>500 TL ve üzeri alışverişlerde <strong>KARGO BEDAVA!</strong></span>
                    </div>
                </div>
                <div class="carousel-item h-100">
                    <div class="announcement-text">
                        <i class="fas fa-stopwatch"></i>
                        <span>14:00'a kadar sipariş ver <strong>AYNI GÜN KARGO</strong></span>
                    </div>
                </div>

                @if (activeCoupons != null && activeCoupons.Any())
                {
                    foreach (var coupon in activeCoupons)
                    {
                        // Kupon linki: Kategoriye özelse o kategoriye, değilse tüm ürünlere
                        string link = coupon.CategoryId != null
                        ? $"/Product/Index?categoryIds={coupon.CategoryId}"
                        : "/Product/Index";

                        <div class="carousel-item h-100">
                            <div class="announcement-text">
                                <i class="fas fa-gift"></i>
                                <span class="me-1">Sana Özel Fırsat: <strong>@coupon.Code</strong> koduyla</span>

                                @if (coupon.IsPercentage)
                                {
                                    <strong>%@coupon.DiscountAmount.ToString("0") İndirim!</strong>
                                }
                                else
                                {
                                    <strong>@coupon.DiscountAmount.ToString("C0") İndirim!</strong>
                                }

                                <a href="@link" class="ms-3 text-dark text-decoration-underline small fw-bold">
                                    Hemen Kullan <i class="fas fa-angle-right"></i>
                                </a>
                            </div>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</div>

<div class="smart-filter-bar">
    <div class="container">
        <form action="/Home/Index" method="get" id="filterForm" class="search-filter-wrapper">
            <input type="text" name="search" class="main-search-input" placeholder="Ne aramıştınız?" value="@ViewData["CurrentSearch"]" autocomplete="off">
            <div class="search-actions">
                <button type="button" class="btn-filter-toggle" id="filterDropdownBtn" onclick="toggleFilters()">
                    <i class="fas fa-sliders-h"></i> Filtrele
                </button>
                <button type="submit" class="btn-search-submit" title="Ara">
                    <i class="fas fa-search"></i>
                </button>
            </div>

            <div class="filter-dropdown-menu" id="filterMenu">
                <div class="row g-0">
                    <div class="col-md-7 p-4 border-end">
                        <h6 class="fw-bold mb-3 small text-muted">KATEGORİLER</h6>
                        <div class="category-grid custom-scrollbar">
                            <div class="cat-item">
                                <a href="/Home/Index" class="cat-chip-label text-decoration-none" style="border-style: dashed;">Tümü</a>
                            </div>
                            @if (Model.Categories != null)
                            {
                                @foreach (var cat in Model.Categories)
                                {
                                    var isChecked = selectedCats != null && selectedCats.Contains(cat.Id) ? "checked" : "";
                                    <div class="cat-item">
                                        <input type="checkbox" name="categoryIds" value="@cat.Id" id="cat-@cat.Id" class="cat-checkbox-hidden" @isChecked>
                                        <label class="cat-chip-label" for="cat-@cat.Id">@cat.Name</label>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    <div class="col-md-5 p-4 bg-light">
                        <h6 class="fw-bold mb-3 small text-muted">FİYAT & SIRALAMA</h6>
                        <div class="d-flex align-items-center gap-2 mb-3">
                            <input type="number" name="minPrice" class="form-control rounded-3" placeholder="En Az" value="@ViewData["MinPrice"]">
                            <span>-</span>
                            <input type="number" name="maxPrice" class="form-control rounded-3" placeholder="En Çok" value="@ViewData["MaxPrice"]">
                        </div>
                        <select name="sortOrder" class="form-select rounded-3 mb-4">
                            <option value="">Önerilen</option>
                            @{
                                var currentSort = ViewData["SortOrder"]?.ToString();
                            }
                            <!option value="price_asc" @(currentSort == "price_asc" ? "selected" : "")>En Düşük Fiyat</!option>
                            <!option value="price_desc" @(currentSort == "price_desc" ? "selected" : "")>En Yüksek Fiyat</!option>
                            <!option value="name_asc" @(currentSort == "name_asc" ? "selected" : "")>İsim (A-Z)</!option>
                        </select>
                        <button type="submit" class="btn btn-primary w-100 rounded-pill" style="background: linear-gradient(135deg, #00c6ff 0%, #0072ff 100%); border:none;">Sonuçları Göster</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="container pb-5">

    <div class="hero-slider-container">
        <div id="mainSlider" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                @if (Model.ActiveCampaigns != null && Model.ActiveCampaigns.Count > 0)
                {
                    for (int i = 0; i < Model.ActiveCampaigns.Count; i++)
                    {
                        <button type="button" data-bs-target="#mainSlider" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></button>
                    }
                }
                else
                {
                    <button type="button" data-bs-target="#mainSlider" data-bs-slide-to="0" class="active"></button>
                }
            </div>

            <div class="carousel-inner">
                @if (Model.ActiveCampaigns != null && Model.ActiveCampaigns.Count > 0)
                {
                    @for (int i = 0; i < Model.ActiveCampaigns.Count; i++)
                    {
                        var camp = Model.ActiveCampaigns[i];

                        // Kampanya Linki: Kampanyanın hedef kategorisine yönlendir
                        string campaignLink = camp.TargetCategoryId != null
                        ? $"/Product/Index?categoryIds={camp.TargetCategoryId}"
                        : "/Product/Index";

                        <div class="carousel-item @(i == 0 ? "active" : "")">

                            <img src="@camp.ImageUrl" class="slider-bg-img" alt="@camp.Title">

                            <div class="slider-content">
                                @if (!string.IsNullOrEmpty(camp.Description))
                                {
                                    <span class="badge bg-danger mb-3 px-3 py-2">FIRSAT</span>
                                    <p class="lead mb-2 fw-bold text-uppercase">@camp.Description</p>
                                }
                                <h1 class="display-4 fw-bold mb-3">@camp.Title</h1>

                                <a href="@campaignLink" class="slider-cta-btn">İncele</a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="carousel-item active">
                        <img src="https://images.unsplash.com/photo-1496181133206-80ce9b88a853?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80" class="slider-bg-img" alt="Varsayılan">
                        <div class="slider-content">
                            <span class="badge bg-warning text-dark mb-3 px-3 py-2">HOŞ GELDİNİZ</span>
                            <h1 class="display-4 fw-bold mb-3">ShopVerse Dünyası</h1>
                            <p class="lead mb-4">Aradığınız tüm ürünler en uygun fiyatlarla burada.</p>
                            <a href="/Product/Index" class="slider-cta-btn">Alışverişe Başla</a>
                        </div>
                    </div>
                }
            </div>

            <button class="carousel-control-prev custom-carousel-control" type="button" data-bs-target="#mainSlider" data-bs-slide="prev"><i class="fas fa-chevron-left"></i></button>
            <button class="carousel-control-next custom-carousel-control" type="button" data-bs-target="#mainSlider" data-bs-slide="next"><i class="fas fa-chevron-right"></i></button>
        </div>
    </div>

    <div id="products-list" class="mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
            <h4 class="fw-bold m-0" style="color: #2d3436;"><i class="fas fa-fire text-danger me-2"></i>Tüm Ürünler</h4>
            <span class="badge bg-light text-dark border rounded-pill px-3">@Model.FeaturedProducts.Count ürün</span>
        </div>

        @if (Model.FeaturedProducts.Count == 0)
        {
            <div class="text-center py-5">
                <div class="bg-light rounded-circle d-inline-flex p-4 mb-3"><i class="fas fa-search fa-3x text-secondary opacity-25"></i></div>
                <h5 class="fw-bold">Ürün Bulunamadı</h5>
                <a href="/Home/Index" class="btn btn-outline-primary rounded-pill mt-2">Temizle</a>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var item in Model.FeaturedProducts)
                {
                    // EN İYİ FİYAT MANTIĞI
                    ShopVerse.Entities.Concrete.Campaign? campaign = null;
                    decimal campaignPrice = item.Price;

                    if (Model.ActiveCampaigns != null)
                    {
                        campaign = Model.ActiveCampaigns.FirstOrDefault(c => c.TargetCategoryId == item.CategoryId || c.TargetCategoryId == null);
                        if (campaign != null)
                        {
                            campaignPrice = item.Price - (item.Price * campaign.DiscountPercentage / 100);
                        }
                    }

                    decimal productDiscountPrice = item.Price;
                    if (item.DiscountRate > 0)
                    {
                        productDiscountPrice = item.PriceWithDiscount;
                    }

                    decimal finalPrice = item.Price;
                    bool showCampaignLabel = false;
                    bool showProductDiscountLabel = false;

                    if (campaign != null && item.DiscountRate > 0)
                    {
                        if (campaignPrice < productDiscountPrice)
                        {
                            finalPrice = campaignPrice;
                            showCampaignLabel = true;
                        }
                        else
                        {
                            finalPrice = productDiscountPrice;
                            showProductDiscountLabel = true;
                        }
                    }
                    else if (campaign != null)
                    {
                        finalPrice = campaignPrice;
                        showCampaignLabel = true;
                    }
                    else if (item.DiscountRate > 0)
                    {
                        finalPrice = productDiscountPrice;
                        showProductDiscountLabel = true;
                    }

                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="card product-card h-100 position-relative">

                            <div class="position-absolute top-0 start-0 m-2 d-flex flex-column gap-1" style="z-index: 10;">
                                @if (showCampaignLabel)
                                {
                                    <span class="badge bg-danger shadow-sm">
                                        <i class="fas fa-fire me-1"></i>%@campaign.DiscountPercentage Kampanya
                                    </span>
                                }
                                else if (showProductDiscountLabel)
                                {
                                    <span class="badge bg-warning text-dark shadow-sm">
                                        <i class="fas fa-arrow-down me-1"></i>%@item.DiscountRate İndirim
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success shadow-sm">YENİ</span>
                                }
                            </div>

                            <div class="product-img-container">
                                <img src="@item.ImageUrl" class="img-fluid" alt="@item.Name" style="max-height: 100%; max-width: 100%;">
                            </div>

                            <div class="card-body text-center d-flex flex-column">
                                <h5 class="card-title text-truncate fw-bold text-dark">@item.Name</h5>

                                <div class="mt-auto">
                                    <div class="d-flex justify-content-center align-items-center gap-2 mt-3 mb-3">
                                        @if (showCampaignLabel || showProductDiscountLabel)
                                        {
                                            <span class="text-muted text-decoration-line-through small">
                                                @item.Price.ToString("C0")
                                            </span>
                                            <span class="text-danger fw-bold fs-5">
                                                @finalPrice.ToString("C0")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-primary fw-bold fs-5">
                                                @item.Price.ToString("C0")
                                            </span>
                                        }
                                    </div>

                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-primary w-100 rounded-pill">
                                        İncele
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function toggleFilters() {
            var menu = document.getElementById('filterMenu');
            var btn = document.getElementById('filterDropdownBtn');
            if (menu.classList.contains('show')) {
                menu.classList.remove('show');
                btn.setAttribute('aria-expanded', 'false');
                btn.style.background = '#f1f2f6'; btn.style.color = '#2d3436';
            } else {
                menu.classList.add('show');
                btn.setAttribute('aria-expanded', 'true');
                btn.style.background = '#e3f2fd'; btn.style.color = '#0072ff';
            }
        }

        document.addEventListener('click', function(event) {
            var menu = document.getElementById('filterMenu');
            var btn = document.getElementById('filterDropdownBtn');
            var isClickInside = menu.contains(event.target) || btn.contains(event.target);
            if (!isClickInside && menu.classList.contains('show')) { toggleFilters(); }
        });
    </script>
}