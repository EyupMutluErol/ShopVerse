@model ShopVerse.WebUI.Models.HomeViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
    /* GENEL AYARLAR */
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f5f7fa;
    }

    /* 1. KONTROL PANELİ (ÜST BAR) */
    .control-bar {
        background: white;
        padding: 12px 0;
        box-shadow: 0 4px 15px rgba(0,0,0,0.03);
        position: relative;
        z-index: 100; /* Slider'ın üzerinde kalması için */
    }

    /* Sol: Kategori Butonu */
    .category-dropdown-btn {
        background-color: #2c3e50;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 0.95rem;
        width: 100%;
        transition: background 0.3s;
    }

        .category-dropdown-btn:hover, .category-dropdown-btn[aria-expanded="true"] {
            background-color: #34495e;
            color: white;
        }

    .category-menu {
        border: none;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        border-radius: 12px;
        padding: 10px;
        width: 260px;
        margin-top: 10px;
    }

    .category-item {
        padding: 8px 15px;
        border-radius: 6px;
        color: #555;
        font-weight: 500;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

        .category-item:hover {
            background-color: #f0f4f8;
            color: #0d6efd;
        }

    /* Orta: Duyuru/Kampanya Slider */
    .announcement-bar {
        height: 45px;
        background-color: #fff;
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        overflow: hidden;
    }

    .announcement-text {
        width: 100%;
        height: 100%; /* Yüksekliği doldur */
        display: flex;
        align-items: center; /* Dikey ortala */
        justify-content: center; /* Yatay ortala */
        font-size: 0.9rem;
        font-weight: 600;
        color: #444;
    }

        .announcement-text i {
            margin-right: 8px;
            font-size: 1.1em;
        }

        .announcement-text strong {
            margin-left: 4px;
            color: #d63031;
        }

    /* Sağ: Arama Çubuğu */
    .integrated-search {
        position: relative;
        width: 100%;
    }

        .integrated-search input {
            border: 2px solid #eee;
            border-radius: 8px;
            padding: 10px 15px;
            padding-right: 50px;
            font-size: 0.9rem;
            background-color: #fff;
            transition: all 0.3s;
            width: 100%; /* Input genişliğini garantiye al */
        }

            .integrated-search input:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.1);
                outline: none;
            }

        .integrated-search button {
            position: absolute;
            right: 4px;
            top: 4px;
            height: 38px;
            width: 40px;
            border-radius: 6px;
            border: none;
            background: #0d6efd;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    /* 2. SLIDER AYARLARI */
    .hero-slider-container {
        margin-top: 20px;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 15px 40px rgba(0,0,0,0.08);
        position: relative;
        background: #000; /* Resim yüklenene kadar siyah zemin */
    }

    .carousel-item {
        height: 450px;
    }

    .slider-bg-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .slider-content {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
        background: linear-gradient(90deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 60%);
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding-left: 80px;
        /* KRİTİK: Butonun tam genişlik olmasını engeller, sola yaslar */
        align-items: flex-start;
        color: white;
    }

    /* Slider Butonu */
    .slider-cta-btn {
        display: inline-block; /* Satır içi blok davranışı */
        width: auto; /* İçerik kadar genişlik */
        padding: 12px 40px;
        font-weight: 600;
        border-radius: 50px;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.9rem;
        margin-top: 20px;
        border: none;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        text-decoration: none;
        text-align: center;
    }

    /* Slider Okları */
    .custom-carousel-control {
        width: 45px;
        height: 45px;
        background: rgba(255,255,255,0.25);
        border-radius: 50%;
        top: 50%;
        transform: translateY(-50%);
        opacity: 1;
        margin: 0 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
        border: 1px solid rgba(255,255,255,0.4);
        cursor: pointer;
        z-index: 2;
    }

        .custom-carousel-control:hover {
            background: white;
            color: #000;
        }

    .carousel-control-prev {
        left: 0;
    }

    .carousel-control-next {
        right: 0;
    }


    /* 3. ÜRÜN KARTLARI */
    .product-card {
        background: white;
        border-radius: 12px;
        border: 1px solid #eee;
        transition: all 0.3s;
        overflow: hidden;
        height: 100%;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.08);
            border-color: #0d6efd;
        }

    .product-img-container {
        height: 220px;
        padding: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fff;
    }
</style>

<div class="control-bar sticky-top">
    <div class="container-fluid px-lg-5">
        <div class="row align-items-center g-2">

            <div class="col-6 col-lg-3 col-xl-2">
                <div class="dropdown">
                    <button class="category-dropdown-btn dropdown-toggle" type="button" id="categoryMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-bars"></i>
                        <span>Kategoriler</span>
                    </button>
                    <ul class="dropdown-menu category-menu" aria-labelledby="categoryMenuButton">
                        <li>
                            <a class="dropdown-item category-item" asp-controller="Product" asp-action="Index">
                                <span><i class="fas fa-th-large me-2 text-muted"></i>Tüm Ürünler</span>
                            </a>
                        </li>
                        <li><hr class="dropdown-divider opacity-25"></li>

                        @if (Model.Categories != null)
                        {
                            @foreach (var cat in Model.Categories)
                            {
                                <li>
                                    <a class="dropdown-item category-item" asp-controller="Product" asp-action="Index" asp-route-categoryId="@cat.Id">
                                        <span>
                                            @if (cat.Name.Contains("Bilgisayar"))
                                            {
                                                <i class="fas fa-laptop me-2 text-muted"></i>
                                            }
                                            else if (cat.Name.Contains("Telefon"))
                                            {

                                                <i class="fas fa-mobile-alt me-2 text-muted"></i>
                                            }
                                            else
                                            {

                                                <i class="fas fa-tag me-2 text-muted"></i>
                                            }
                                            @cat.Name
                                        </span>
                                        <i class="fas fa-chevron-right small opacity-50"></i>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>

            <div class="col-lg-5 col-xl-6 d-none d-lg-block">
                <div id="announcementCarousel" class="carousel slide announcement-bar" data-bs-ride="carousel">
                    <div class="carousel-inner h-100">
                        <div class="carousel-item active h-100">
                            <div class="announcement-text">
                                <i class="fas fa-truck text-primary"></i> 500 TL ve üzeri alışverişlerde <strong>KARGO BEDAVA!</strong>
                            </div>
                        </div>
                        <div class="carousel-item h-100">
                            <div class="announcement-text">
                                <i class="fas fa-stopwatch text-warning"></i> 14:00'a kadar sipariş ver <strong>AYNI GÜN KARGO</strong>
                            </div>
                        </div>
                        <div class="carousel-item h-100">
                            <div class="announcement-text">
                                <i class="fas fa-percentage text-danger"></i> Yaz sezonuna özel seçili ürünlerde <strong>%50 İNDİRİM</strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-6 col-lg-4 col-xl-4">
                <form action="/Product/Index" method="get" class="integrated-search">
                    <input type="text" name="search" class="form-control" placeholder="Marka, ürün veya kategori ara...">
                    <button type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>

<div class="container-fluid px-lg-5 pb-5">

    <div class="hero-slider-container">
        <div id="mainSlider" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#mainSlider" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#mainSlider" data-bs-slide-to="1"></button>
            </div>
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <img src="https://images.unsplash.com/photo-1496181133206-80ce9b88a853?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80"
                         class="slider-bg-img" alt="Teknoloji">

                    <div class="slider-content">
                        <span class="badge bg-warning text-dark mb-3 px-3 py-2">YENİ SEZON</span>
                        <h1 class="display-4 fw-bold mb-3">Teknoloji Dünyası</h1>
                        <p class="lead mb-4 text-white-50">En son çıkan modeller şimdi stoklarda.</p>
                        <a href="#" class="btn btn-light slider-cta-btn text-dark">Hemen Keşfet</a>
                    </div>
                </div>

                <div class="carousel-item">
                    <img src="https://images.unsplash.com/photo-1607082348824-0a96f2a4b9da?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80"
                         class="slider-bg-img" alt="İndirim">

                    <div class="slider-content">
                        <span class="badge bg-danger mb-3 px-3 py-2">BÜYÜK FIRSAT</span>
                        <h1 class="display-4 fw-bold mb-3">Yaz İndirimleri</h1>
                        <p class="lead mb-4 text-white-50">Seçili ürünlerde dev indirimler başladı.</p>
                        <a href="#" class="btn btn-danger slider-cta-btn text-white">Alışverişe Başla</a>
                    </div>
                </div>

            </div>

            <button class="carousel-control-prev custom-carousel-control" type="button" data-bs-target="#mainSlider" data-bs-slide="prev">
                <i class="fas fa-chevron-left fa-lg text-dark"></i>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next custom-carousel-control" type="button" data-bs-target="#mainSlider" data-bs-slide="next">
                <i class="fas fa-chevron-right fa-lg text-dark"></i>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>


    <div class="d-flex justify-content-between align-items-center mb-4 mt-5 border-bottom pb-2">
        <h4 class="fw-bold text-dark m-0"><i class="fas fa-fire text-danger me-2"></i>Öne Çıkan Ürünler</h4>
        <a asp-controller="Product" asp-action="Index" class="btn btn-sm btn-outline-secondary rounded-pill px-3">
            Tümünü Gör
        </a>
    </div>

    <div class="row g-3">
        @if (Model.FeaturedProducts != null)
        {
            @foreach (var item in Model.FeaturedProducts.Take(12))
            {
                <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                    <div class="product-card d-flex flex-column h-100 position-relative">

                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="text-decoration-none">
                            <div class="product-img-container">
                                @if (string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <i class="fas fa-box-open fa-3x text-secondary opacity-25"></i>
                                }
                                else
                                {
                                    <img src="@item.ImageUrl" style="max-height: 100%; max-width: 100%; object-fit: contain;">
                                }
                            </div>
                        </a>

                        <div class="p-3 d-flex flex-column flex-grow-1 border-top border-light">
                            <small class="text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">@item.Category?.Name</small>
                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                                <h6 class="fw-bold mt-1 mb-2 text-truncate">@item.Name</h6>
                            </a>

                            <div class="mt-auto d-flex align-items-end justify-content-between">
                                <span class="fw-bold text-primary fs-5">@item.Price.ToString("C2")</span>

                                <div class="d-flex gap-2">
                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-light border rounded-3 px-2" title="İncele">
                                        <i class="fas fa-eye text-secondary"></i>
                                    </a>

                                    <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                        <input type="hidden" name="productId" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-primary rounded-3 px-2 shadow-sm">
                                            <i class="fas fa-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <span class="badge bg-danger position-absolute top-0 start-0 m-2 shadow-sm" style="font-size: 0.65rem;">YENİ</span>
                    </div>
                </div>
            }
        }
    </div>

</div>