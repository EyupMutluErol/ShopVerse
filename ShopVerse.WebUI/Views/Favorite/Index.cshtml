@using ShopVerse.WebUI.Models
@model List<ProductCardViewModel>

@{
    ViewData["Title"] = "Favorilerim";
}

<div class="container py-5">
    <div class="d-flex align-items-center mb-4 border-bottom pb-3">
        <i class="fas fa-heart text-danger fa-2x me-3"></i>
        <h2 class="fw-bold m-0 text-dark">Favorilerim</h2>
        <span class="ms-auto badge bg-secondary rounded-pill fs-6">@Model.Count Ürün</span>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <span class="fa-stack fa-2x">
                    <i class="fas fa-circle fa-stack-2x text-light"></i>
                    <i class="far fa-heart fa-stack-1x text-muted"></i>
                </span>
            </div>
            <h3 class="fw-bold text-dark">Favori listeniz henüz boş.</h3>
            <p class="text-muted mb-4">Beğendiğiniz ürünleri kalp ikonuna tıklayarak buraya ekleyebilir ve takip edebilirsiniz.</p>
            <a href="/Home/Index" class="btn btn-primary btn-lg shadow-sm rounded-pill px-5">
                <i class="fas fa-shopping-bag me-2"></i>Alışverişe Başla
            </a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 position-relative product-card hover-shadow transition-all">

                        <button onclick="toggleFavorite(@item.Id, this)"
                                class="btn btn-light rounded-circle position-absolute top-0 end-0 m-2 shadow-sm text-danger"
                                style="z-index: 10;"
                                title="Favorilerden Çıkar">
                            <i class="fas fa-heart"></i>
                        </button>

                        <div class="position-relative overflow-hidden bg-light rounded-top p-3 text-center" style="height: 250px;">
                            @if (item.Stock <= 0)
                            {
                                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-dark bg-opacity-50 text-white fw-bold" style="z-index: 5;">
                                    TÜKENDİ
                                </div>
                            }
                            <img src="@item.ImageUrl" class="img-fluid h-100 object-fit-contain" alt="@item.Name">
                        </div>

                        <div class="card-body d-flex flex-column">
                            <div class="mb-2">
                                <span class="badge bg-light text-secondary border">@item.CategoryName</span>
                            </div>

                            <h5 class="card-title text-dark fw-bold text-truncate mb-1" title="@item.Name">
                                <a href="/Product/Detail/@item.Id" class="text-decoration-none text-dark stretched-link">
                                    @item.Name
                                </a>
                            </h5>

                            <div class="mt-auto pt-3">
                                @if (item.DiscountRate > 0)
                                {
                                    <div class="d-flex align-items-center gap-2 mb-3">
                                        <span class="text-decoration-line-through text-muted small">@item.Price.ToString("C2")</span>
                                        <span class="fw-bold text-danger fs-5">@item.PriceWithDiscount.ToString("C2")</span>
                                        <span class="badge bg-danger ms-auto">-%@Convert.ToInt32(item.DiscountRate)</span>
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-3">
                                        <span class="fw-bold text-dark fs-5">@item.Price.ToString("C2")</span>
                                    </div>
                                }

                                <button onclick="addToCart(@item.Id)"
                                        class="btn btn-outline-primary w-100 rounded-pill position-relative"
                                        style="z-index: 20;"
                                        @(item.Stock <= 0 ? "disabled" : "")>
                                    <i class="fas fa-shopping-cart me-2"></i>
                                    @(item.Stock <= 0 ? "Stokta Yok" : "Sepete Ekle")
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
    </script>
}