@using Microsoft.AspNetCore.Identity
@using ShopVerse.Entities.Concrete
@using Microsoft.AspNetCore.Http
@using ShopVerse.WebUI.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopVerse</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .product-card img {
            height: 250px;
            object-fit: cover;
        }

        .product-card {
            transition: transform 0.3s;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">ShopVerse</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link active" asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Products">Tüm Ürünler</a></li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    @{
                        int cartCount = 0;
                        // Session'dan veriyi string olarak çekiyoruz
                        var sessionCart = HttpContextAccessor.HttpContext?.Session.GetString("Cart");

                        // Eğer veri varsa deserialize edip sayısını alıyoruz
                        if (!string.IsNullOrEmpty(sessionCart))
                        {
                            var items = System.Text.Json.JsonSerializer.Deserialize<List<CartItemModel>>(sessionCart);
                            if (items != null)
                            {
                                cartCount = items.Sum(x => x.Quantity); // Toplam ürün adedi
                            }
                        }
                    }
                    <li class="nav-item me-2">
                        <a asp-controller="Cart" asp-action="Index" class="nav-link position-relative">
                            <i class="fas fa-shopping-cart fa-lg"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @cartCount  
                            </span>
                        </a>
                    </li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item border-start ms-2 ps-2 d-flex align-items-center">
                            <span class="nav-link text-light me-2">
                                <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
                            </span>
                            <a asp-controller="Account" asp-action="Logout" class="btn btn-sm btn-outline-danger text-light border-0">
                                <i class="fas fa-sign-out-alt"></i> Çıkış
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item border-start ms-2 ps-2 d-flex">
                            <a asp-controller="Account" asp-action="Login" class="nav-link">
                                <i class="fas fa-sign-in-alt me-1"></i> Giriş
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="nav-link">
                                <i class="fas fa-user-plus me-1"></i> Kayıt
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="flex-shrink-0">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container text-center">
            <span class="text-muted">&copy; 2025 - ShopVerse E-Ticaret</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        @if (TempData["Icon"] != null)
        {
                <text>
                Swal.fire({
                    position: 'bottom-end', // Sağ alt köşe
                    icon: '@TempData["Icon"]', // success, error, warning
                    title: '@TempData["Message"]',
                    showConfirmButton: false,
                    timer: 3000, // 3 saniye sonra kaybolur
                    toast: true // Toast modunu açar (küçük bildirim)
                });
                </text>
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>