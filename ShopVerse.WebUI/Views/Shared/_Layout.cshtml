@using Microsoft.AspNetCore.Identity
@using ShopVerse.Entities.Concrete
@using Microsoft.AspNetCore.Http
@using ShopVerse.Business.Abstract

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@inject ICategoryService CategoryService

@{
    var categories = await CategoryService.GetAllAsync();
}

<!DOCTYPE html>
<html lang="tr" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopVerse</title>

    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-bs-theme', savedTheme);
        })();
    </script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

    <style>
        /* --- CSS DEĞİŞKENLERİ --- */
        :root {
            --navbar-bg: #ffffff;
            --body-bg: #ffffff;
            --text-color: #333333;
            --card-bg: #ffffff;
            --border-color: #f0f0f0;
        }

        /* KOYU MOD DEĞİŞKENLERİ */
        [data-bs-theme="dark"] {
            --navbar-bg: #1c1c1e;
            --body-bg: #121212;
            --text-color: #e0e0e0;
            --card-bg: #1e1e1e;
            --border-color: #333333;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--body-bg) !important;
            color: var(--text-color) !important;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

        /* --- NAVBAR --- */
        .navbar-custom {
            background: var(--navbar-bg) !important;
            border-bottom: 1px solid var(--border-color);
            transition: background-color 0.3s ease;
        }

        .navbar-brand {
            font-weight: 800;
            font-size: 1.5rem;
            color: #0072ff !important;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .nav-link {
            color: var(--text-color) !important;
            font-weight: 600;
            padding: 8px 15px !important;
            border-radius: 50px;
            transition: all 0.2s;
        }

            .nav-link:hover {
                color: #0072ff !important;
                background: rgba(0, 114, 255, 0.1);
            }

        /* --- İKON BUTONLARI --- */
        .nav-icon-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 42px;
            height: 42px;
            border-radius: 50%;
            transition: all 0.3s;
            text-decoration: none;
            cursor: pointer;
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            color: var(--text-color);
        }

            .nav-icon-btn:hover {
                background: #0072ff !important;
                color: white !important;
                border-color: #0072ff !important;
                transform: translateY(-2px);
            }

        /* --- DROPDOWN & KARTLAR --- */
        .dropdown-menu {
            border: 1px solid var(--border-color);
            background-color: var(--card-bg);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

        .dropdown-item {
            color: var(--text-color);
        }

            .dropdown-item:hover {
                background-color: rgba(0, 114, 255, 0.1);
                color: #0072ff;
            }

        [data-bs-theme="dark"] .bg-light {
            background-color: #2c2c2c !important;
        }

        [data-bs-theme="dark"] .card {
            background-color: var(--card-bg);
            border-color: var(--border-color);
        }

        [data-bs-theme="dark"] .table {
            color: var(--text-color);
            border-color: var(--border-color);
        }

        [data-bs-theme="dark"] .form-control, [data-bs-theme="dark"] .form-select {
            background-color: #2c2c2c;
            border-color: #444;
            color: #fff;
        }

        /* Footer Link Hover */
        .hover-link {
            transition: color 0.3s ease, padding-left 0.3s ease;
        }

            .hover-link:hover {
                color: #ffc107 !important;
                padding-left: 5px;
            }

        main {
            flex: 1;
        }

        .nav-profile-img {
            width: 40px;
            height: 40px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid var(--border-color);
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
        <div class="container">

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-shopping-bag"></i> ShopVerse
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon" style="filter: invert(var(--invert-value));"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4 align-items-lg-center">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Anasayfa</a></li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Kategoriler</a>
                        <ul class="dropdown-menu animate-slide border-0 shadow-lg">
                            <li><a class="dropdown-item fw-bold text-primary" href="/Product/Index">Tüm Kategoriler</a></li>
                            <li><hr class="dropdown-divider"></li>
                            @if (categories != null)
                            {
                                foreach (var cat in categories)
                                {
                                    <li><a class="dropdown-item" href="/Product/Index?categoryIds=@cat.Id">@cat.Name</a></li>
                                }
                            }
                        </ul>
                    </li>

                    <li class="nav-item"><a class="nav-link" asp-controller="Product" asp-action="Index">Tüm Ürünler</a></li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="/Product/Index?showDeals=true"><i class="fas fa-fire me-1"></i> Fırsatlar</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">Hakkımızda</a></li>
                </ul>

                <ul class="navbar-nav ms-auto align-items-center gap-3">

                    <li class="nav-item">
                        <button class="nav-icon-btn border-0" id="themeToggle" title="Temayı Değiştir">
                            <i class="fas fa-moon" id="themeIcon"></i>
                        </button>
                    </li>

                    <li class="nav-item position-relative">
                        <a class="nav-icon-btn" asp-controller="Cart" asp-action="Index" title="Sepetim">
                            <i class="fas fa-shopping-cart"></i>
                            @await Component.InvokeAsync("CartCount")
                        </a>
                    </li>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        var currentUser = await UserManager.FindByNameAsync(User.Identity.Name);
                        var displayName = currentUser?.Name ?? User.Identity.Name;

                        if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item d-flex align-items-center gap-2">
                                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-sm btn-dark fw-bold rounded-pill px-4 shadow-sm d-flex align-items-center">
                                    <i class="fas fa-user-shield me-2"></i>Admin
                                </a>
                                <a asp-controller="Account" asp-action="Logout" class="btn btn-sm btn-outline-danger rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 34px; height: 34px;">
                                    <i class="fas fa-sign-out-alt"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 p-0" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    @if (currentUser != null && !string.IsNullOrEmpty(currentUser.ImageUrl))
                                    {
                                        <img src="/userimages/@currentUser.ImageUrl" class="nav-profile-img">
                                    }
                                    else
                                    {
                                        <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center text-primary fw-bold" style="width: 40px; height: 40px; border: 2px solid var(--border-color);">
                                            @displayName.Substring(0, 1).ToUpper()
                                        </div>
                                    }
                                    <span class="d-none d-lg-inline small fw-bold">@displayName</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end animate-slide p-2">
                                    <li><a class="dropdown-item rounded" asp-controller="Profile" asp-action="Index"><i class="fas fa-user-circle me-2"></i>Profilim</a></li>
                                    <li><a class="dropdown-item rounded" asp-controller="Favorite" asp-action="Index"><i class="fas fa-heart me-2"></i>Favorilerim</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item rounded text-danger" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i>Çıkış</a></li>
                                </ul>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="nav-item d-flex align-items-center gap-2">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-sm fw-bold rounded-pill px-4">Giriş</a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-sm fw-bold rounded-pill px-4 text-white">Kayıt</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white pt-5 pb-4 mt-auto" style="background: linear-gradient(to right, #2c3e50, #4ca1af);">
        <div class="container text-center text-md-start">
            <div class="row text-center text-md-start">

                <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 fw-bold text-warning">
                        <i class="fas fa-shopping-bag me-2"></i>ShopVerse
                    </h5>
                    <p>
                        Teknolojiden modaya, aradığınız her şey en uygun fiyatlarla ShopVerse'de. Güvenli alışverişin ve hızlı teslimatın keyfini çıkarın.
                    </p>
                </div>

                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 fw-bold text-warning">Kurumsal</h5>
                    <p><a href="/Home/Index" class="text-white text-decoration-none hover-link">Anasayfa</a></p>
                    <p><a href="/Product/Index" class="text-white text-decoration-none hover-link">Tüm Ürünler</a></p>
                    <p><a href="/Home/Privacy" class="text-white text-decoration-none hover-link">Gizlilik Politikası</a></p>
                    <p><a href="/Home/About" class="text-white text-decoration-none hover-link">Hakkımızda</a></p>
                </div>

                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 fw-bold text-warning">İletişim</h5>
                    <p><i class="fas fa-home me-2"></i> İstanbul, Kadıköy, TR</p>
                    <p><i class="fas fa-envelope me-2"></i> info@shopverse.com</p>
                    <p><i class="fas fa-phone me-2"></i> +90 546 760 43 76</p>
                </div>

                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h5 class="text-uppercase mb-4 fw-bold text-warning">Bizi Takip Edin</h5>
                    <div class="d-flex justify-content-center justify-content-md-start">
                        <a href="#" class="btn btn-outline-light btn-floating m-1 rounded-circle border-0" style="background-color: rgba(255,255,255,0.1);"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="btn btn-outline-light btn-floating m-1 rounded-circle border-0" style="background-color: rgba(255,255,255,0.1);"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="btn btn-outline-light btn-floating m-1 rounded-circle border-0" style="background-color: rgba(255,255,255,0.1);"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="btn btn-outline-light btn-floating m-1 rounded-circle border-0" style="background-color: rgba(255,255,255,0.1);"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>
            </div>

            <hr class="mb-4">

            <div class="row align-items-center">
                <div class="col-md-7 col-lg-8">
                    <p class="mb-0">
                        © @DateTime.Now.Year <strong>ShopVerse</strong>. Tüm Hakları Saklıdır.
                        <a href="/Home/Privacy" class="text-warning text-decoration-none ms-2"><strong>Gizlilik & Güvenlik</strong></a>
                    </p>
                </div>
                <div class="col-md-5 col-lg-4">
                    <div class="text-center text-md-end">
                        <i class="fab fa-cc-visa fa-2x ms-2"></i>
                        <i class="fab fa-cc-mastercard fa-2x ms-2"></i>
                        <i class="fab fa-cc-paypal fa-2x ms-2"></i>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // --- TEMA VE IKON YÖNETİMİ (JavaScript) ---
        document.addEventListener("DOMContentLoaded", function () {
            const toggleBtn = document.getElementById('themeToggle');
            const themeIcon = document.getElementById('themeIcon');

            // 1. Mevcut temayı kontrol et ve İKONU güncelle
            const currentTheme = localStorage.getItem('theme') || 'light';
            updateIcon(currentTheme);

            // 2. Butona tıklayınca
            toggleBtn.addEventListener('click', function () {
                const htmlElement = document.documentElement;
                let current = htmlElement.getAttribute('data-bs-theme');
                let newTheme = current === 'dark' ? 'light' : 'dark';

                // Temayı uygula
                htmlElement.setAttribute('data-bs-theme', newTheme);
                localStorage.setItem('theme', newTheme);

                // İkonu güncelle
                updateIcon(newTheme);
            });

            function updateIcon(theme) {
                if (theme === 'dark') {
                    themeIcon.classList.remove('fa-moon');
                    themeIcon.classList.add('fa-sun');
                    themeIcon.style.color = "#f9ca24"; // Güneş
                } else {
                    themeIcon.classList.remove('fa-sun');
                    themeIcon.classList.add('fa-moon');
                    themeIcon.style.color = "#333"; // Ay
                }
            }
        });

        // --- SEPET VE FAVORİ İŞLEMLERİ ---
        function addToCart(productId, quantity = 1) {
            $.ajax({
                url: '/Cart/AddToCart',
                type: 'POST',
                data: { productId: productId, quantity: quantity },
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success', title: 'Sepete Eklendi', text: 'Ürün sepetinize eklendi.',
                            toast: true, position: 'top-end', showConfirmButton: false, timer: 3000,
                            timerProgressBar: true
                        });
                        var badge = $("#cart-badge-count");
                        if (badge.length) { badge.text(response.cartCount); badge.removeClass("d-none"); }
                    }
                }
            });
        }

        function toggleFavorite(productId, btnElement) {
            $.ajax({
                url: '/Favorite/Toggle', type: 'POST', data: { productId: productId },
                success: function (response) {
                    if (response.success) {
                        var icon = $(btnElement).find('i');
                        if (response.isFavorited) { icon.removeClass('far').addClass('fas text-danger'); }
                        else {
                            icon.removeClass('fas text-danger').addClass('far');
                            if (window.location.pathname.toLowerCase().includes("/favorite")) {
                                $(btnElement).closest('.col').fadeOut(300, function() { $(this).remove(); });
                            }
                        }
                        const Toast = Swal.mixin({ toast: true, position: 'top-end', showConfirmButton: false, timer: 2000 });
                        Toast.fire({ icon: response.isFavorited ? 'success' : 'info', title: response.isFavorited ? 'Favorilere Eklendi' : 'Çıkarıldı' });
                    } else {
                        Swal.fire({ title: 'Giriş Yapmalısınız', icon: 'warning', confirmButtonText: 'Giriş Yap', showCancelButton: true }).then((r) => { if(r.isConfirmed) window.location.href = '/Account/Login'; });
                    }
                }
            });
        }

        $(document).ready(function() {
            var userMsg = '@Html.Raw(TempData["UserMessage"])';
            if (userMsg) { Swal.fire({ icon: '@TempData["UserType"]' || 'info', title: 'Bilgi', text: userMsg, toast: true, position: 'top-end', timer: 3000, showConfirmButton: false }); }
            var orderSuccess = '@Html.Raw(TempData["OrderSuccess"])';
            if (orderSuccess) { Swal.fire({ icon: 'success', title: 'Sipariş Alındı!', text: orderSuccess, confirmButtonText: 'Tamam', confirmButtonColor: '#0072ff' }); }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>