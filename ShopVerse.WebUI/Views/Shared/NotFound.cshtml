@{
    ViewData["Title"] = "404 - Sayfa Bulunamadı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container d-flex flex-column align-items-center justify-content-center" style="min-height: 70vh;">

    <div class="text-center">
        <h1 class="display-1 fw-bold" style="font-size: 10rem; background: -webkit-linear-gradient(#ffc107, #fd7e14); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
            404
        </h1>

        <div class="mb-4">
            <i class="fas fa-ghost fa-3x text-secondary opacity-50 fa-beat" style="--fa-animation-duration: 2s;"></i>
        </div>

        <h2 class="fw-bold text-dark mb-3">Oops! Sayfa Kaybolmuş Gibi...</h2>

        <p class="text-muted lead mb-5" style="max-width: 600px; margin: 0 auto;">
            Aradığınız sayfa silinmiş, adı değiştirilmiş veya geçici olarak kullanılamıyor olabilir.
            Endişelenmeyin, sizi doğru yola geri döndürebiliriz.
        </p>

        <div class="d-flex gap-3 justify-content-center">
            <a href="/" class="btn btn-warning btn-lg text-white fw-bold px-5 rounded-pill shadow-sm" style="background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%); border:none;">
                <i class="fas fa-home me-2"></i> Ana Sayfaya Dön
            </a>

            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg rounded-pill px-4 fw-bold">
                <i class="fas fa-arrow-left me-2"></i> Geri Git
            </a>
        </div>
    </div>

</div>