@model RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .login-container {
        display: flex;
        min-height: 550px; 
        background: #fff;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 30px rgba(0,0,0,0.1);
    }

    .login-image-side {
        flex: 1;
        background: linear-gradient(135deg, rgba(255, 193, 7, 0.85) 0%, rgba(253, 126, 20, 0.85) 100%), url('https://images.unsplash.com/photo-1441984904996-e0b6ba687e04?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80') center/cover;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 50px;
        color: white;
    }

        .login-image-side h2 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
        }

        .login-image-side p {
            font-size: 1.2rem;
            font-weight: 500;
            opacity: 0.95;
        }

    .login-form-side {
        flex: 1;
        padding: 50px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .login-form-side h3 {
            font-size: 2rem;
            font-weight: 700;
            color: #2d3436;
            margin-bottom: 10px;
            text-align: center;
        }

        .login-form-side .subtitle {
            text-align: center;
            color: #636e72;
            margin-bottom: 40px;
        }

    .form-control {
        height: 50px;
        border-radius: 12px;
        border: 2px solid #f0f0f0;
        padding-left: 20px;
        font-size: 1rem;
        transition: all 0.3s;
    }

        .form-control:focus {
            border-color: #fd7e14; 
            box-shadow: 0 0 0 4px rgba(253, 126, 20, 0.1);
        }

    .form-label {
        font-weight: 600;
        color: #2d3436;
        margin-bottom: 10px;
    }

    .btn-register {
        height: 55px;
        background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
        border: none;
        border-radius: 12px;
        font-size: 1.1rem;
        font-weight: 700;
        color: #2d3436;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        transition: all 0.3s;
    }

        .btn-register:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(253, 126, 20, 0.3);
            color: #2d3436;
        }

    .login-link {
        color: #fd7e14; 
        font-weight: 700;
        text-decoration: none;
        transition: all 0.2s;
    }

        .login-link:hover {
            color: #e67e22;
            text-decoration: underline;
        }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="login-container">

                <div class="login-image-side">
                    <h2>Aramıza Katılın!</h2>
                    <p>ShopVerse ailesine üye olun, size özel fırsatları ve avantajlı alışverişin keyfini kaçırmayın.</p>
                </div>

                <div class="login-form-side">
                    <h3>Kayıt Ol</h3>
                    <p class="subtitle">Hesap bilgilerinizi girerek hızlıca üye olun.</p>

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">Ad</label>
                                <input asp-for="Name" class="form-control"  />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Surname" class="form-label">Soyad</label>
                                <input asp-for="Surname" class="form-control"  />
                                <span asp-validation-for="Surname" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">E-Posta Adresi</label>
                            <input asp-for="Email" class="form-control" type="email"  />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label">Şifre</label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="******" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="******" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-register w-100 mb-4">
                            Kayıt Ol <i class="fas fa-arrow-right"></i>
                        </button>

                        <div class="text-center fw-bold text-muted">
                            Zaten bir hesabınız var mı?
                            <a href="/Account/Login" class="login-link">Hemen Giriş Yap</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>