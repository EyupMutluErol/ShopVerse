@model ShopVerse.WebUI.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Şifre Sıfırla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-lg rounded-4">
                <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);">
                    <h3 class="fw-bold mb-0"><i class="fas fa-key me-2"></i>Yeni Şifre Belirle</h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3 small"></div>

                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="Email" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Yeni Şifre</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg bg-light" placeholder="******" required />
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Yeni Şifre (Tekrar)</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg bg-light" placeholder="******" required />
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100 fw-bold shadow-sm">
                            Şifreyi Güncelle <i class="fas fa-check ms-2"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>