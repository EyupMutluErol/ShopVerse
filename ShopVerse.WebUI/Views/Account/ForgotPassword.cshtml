@model ShopVerse.WebUI.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);">
                    <h3 class="fw-bold mb-0"><i class="fas fa-lock me-2"></i>Şifremi Unuttum</h3>
                </div>
                <div class="card-body p-5">
                    <p class="text-muted text-center mb-4">
                        Lütfen hesabınıza kayıtlı e-posta adresinizi girin. Size şifrenizi sıfırlamanız için bir bağlantı göndereceğiz.
                    </p>
                    <form asp-action="ForgotPassword" method="post">
                        <div class="mb-4">
                            <label class="form-label fw-bold">E-Posta Adresi</label>
                            <input asp-for="Email" class="form-control form-control-lg bg-light" placeholder="ornek@email.com" required />
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg text-white fw-bold shadow-sm" style="background: #fd7e14; border:none;">
                                Bağlantı Gönder <i class="fas fa-paper-plane ms-2"></i>
                            </button>
                            <a href="/Account/Login" class="btn btn-light btn-lg fw-bold text-muted">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>