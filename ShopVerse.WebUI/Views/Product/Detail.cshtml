@model ShopVerse.Entities.Concrete.Product

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Favori Kontrolü: Bu ürün kullanıcının favorilerinde mi?
    var favList = ViewBag.FavoriteProductIds as List<int>;
    bool isFav = favList != null && favList.Contains(Model.Id);
}

<div class="container mt-5 mb-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-decoration-none text-dark">Anasayfa</a></li>
            <li class="breadcrumb-item"><a asp-controller="Product" asp-action="Index" class="text-decoration-none text-dark">Tüm Ürünler</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 d-flex align-items-center justify-content-center bg-light">
                <img src="@Model.ImageUrl" class="img-fluid rounded p-4" alt="@Model.Name" style="max-height: 500px; object-fit: contain;">
            </div>
        </div>

        <div class="col-md-6">

            <h1 class="fw-bold mb-3 text-dark">@Model.Name</h1>

            <div class="mb-4">
                @if (ViewBag.DiscountType == "Campaign")
                {
                    <div class="d-flex align-items-center flex-wrap gap-2">
                        <span class="text-muted text-decoration-line-through fs-4">
                            @Model.Price.ToString("C2")
                        </span>

                        <span class="text-danger fw-bold display-6">
                            @(((decimal)ViewBag.FinalPrice).ToString("C2"))
                        </span>

                        <span class="badge bg-danger ms-2 px-3 py-2 rounded-pill">
                            <i class="fas fa-fire me-1"></i>%@ViewBag.DiscountRate Kampanya
                        </span>
                    </div>
                    <small class="text-danger fw-bold d-block mt-1">
                        <i class="fas fa-stopwatch me-1"></i>Bu üründe süreli kampanya var!
                    </small>
                }
                else if (ViewBag.DiscountType == "ProductDiscount")
                {
                    <div class="d-flex align-items-center flex-wrap gap-2">
                        <span class="text-muted text-decoration-line-through fs-4">
                            @Model.Price.ToString("C2")
                        </span>

                        <span class="text-danger fw-bold display-6">
                            @(((decimal)ViewBag.FinalPrice).ToString("C2"))
                        </span>

                        <span class="badge bg-warning text-dark ms-2 px-3 py-2 rounded-pill">
                            <i class="fas fa-arrow-down me-1"></i>%@ViewBag.DiscountRate İndirim
                        </span>
                    </div>
                }
                else
                {
                    <span class="fw-bold display-6 text-primary">
                        @Model.Price.ToString("C2")
                    </span>
                }
            </div>

            <p class="text-muted fs-5 mb-4 lh-lg">@Model.Description</p>

            <div class="mb-4">
                @if (Model.Stock > 0)
                {
                    <span class="badge bg-success bg-opacity-10 text-success fs-6 px-3 py-2 border border-success border-opacity-25 rounded-pill">
                        <i class="fas fa-check-circle me-1"></i>Stokta Var (@Model.Stock adet)
                    </span>
                }
                else
                {
                    <span class="badge bg-secondary bg-opacity-10 text-secondary fs-6 px-3 py-2 border border-secondary border-opacity-25 rounded-pill">
                        <i class="fas fa-times-circle me-1"></i>Tükendi
                    </span>
                }
            </div>

            <div class="d-flex align-items-center gap-3 mt-4 flex-wrap">

                @if (Model.Stock > 0)
                {
                    <div class="input-group" style="width: 140px;">
                        <button class="btn btn-outline-secondary" type="button" onclick="updateQuantity(-1)">
                            <i class="fas fa-minus"></i>
                        </button>

                        <input type="text" id="quantityInput" class="form-control text-center fw-bold border-secondary bg-white" value="1" readonly>

                        <button class="btn btn-outline-secondary" type="button" onclick="updateQuantity(1)">
                            <i class="fas fa-plus"></i>
                        </button>
                    </div>

                    <button onclick="addToCartDetail(@Model.Id)" class="btn btn-dark btn-lg flex-grow-1 shadow-sm rounded-pill px-4">
                        <i class="fas fa-shopping-cart me-2"></i>Sepete Ekle
                    </button>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg flex-grow-1 rounded-pill" disabled>
                        <i class="fas fa-times-circle me-2"></i>Stokta Yok
                    </button>
                }

                <button onclick="toggleFavorite(@Model.Id, this)"
                        class="btn btn-outline-secondary btn-lg shadow-sm rounded-circle d-flex align-items-center justify-content-center"
                        style="width: 50px; height: 50px;"
                        title="@(isFav ? "Favorilerden Çıkar" : "Favorilere Ekle")">
                    <i class="@(isFav ? "fas text-danger" : "far") fa-heart fa-lg"></i>
                </button>

            </div>

            <input type="hidden" id="maxStock" value="@Model.Stock" />

            <div class="mt-5 p-4 bg-light bg-opacity-50 rounded-4 border">
                <div class="d-flex align-items-center mb-3">
                    <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                        <i class="fas fa-truck text-primary fa-lg"></i>
                    </div>
                    <div>
                        <strong class="d-block text-dark">Hızlı Teslimat</strong>
                        <small class="text-muted">24 saat içinde kargoda.</small>
                    </div>
                </div>
                <hr class="my-2 border-secondary border-opacity-10">
                <div class="d-flex align-items-center mt-3">
                    <div class="bg-success bg-opacity-10 p-2 rounded-circle me-3">
                        <i class="fas fa-shield-alt text-success fa-lg"></i>
                    </div>
                    <div>
                        <strong class="d-block text-dark">Güvenli Ödeme</strong>
                        <small class="text-muted">256-bit SSL koruması.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // ADET GÜNCELLEME FONKSİYONU
        function updateQuantity(change) {
            var input = document.getElementById("quantityInput");
            var maxStock = parseInt(document.getElementById("maxStock").value);
            var currentValue = parseInt(input.value);

            var newValue = currentValue + change;

            if (newValue >= 1 && newValue <= maxStock) {
                input.value = newValue;
            }
        }

        // SEPETE EKLEME FONKSİYONU (AJAX + SWEETALERT)
        function addToCartDetail(productId) {
            var quantity = document.getElementById("quantityInput").value;

            $.ajax({
                url: '/Cart/AddToCart',
                type: 'POST',
                data: { productId: productId, quantity: quantity },
                success: function (res) {
                    if (res.success) {

                        // TOAST BİLDİRİMİ
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'Sepete Eklendi',
                            text: 'Ürün sepetinize başarıyla eklendi.',
                            showConfirmButton: false,
                            timer: 3000,
                            toast: true,
                            background: '#fff',
                            color: '#000',
                            timerProgressBar: true
                        });

                        // Sepet Badge Güncelleme
                        var badge = $("#cart-badge-count");
                        if (badge.length) {
                            badge.text(res.cartCount);
                            badge.removeClass("d-none");
                        }

                    } else {
                        // Hata durumunda
                        Swal.fire({
                            position: 'top-end',
                            icon: 'error',
                            title: 'Hata',
                            text: res.message,
                            showConfirmButton: false,
                            timer: 3000,
                            toast: true
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'error',
                        title: 'Hata',
                        text: 'Bir sorun oluştu.',
                        showConfirmButton: false,
                        timer: 3000,
                        toast: true
                    });
                }
            });
        }
    </script>
}