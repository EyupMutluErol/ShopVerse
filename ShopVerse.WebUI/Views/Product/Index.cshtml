@model List<ShopVerse.Entities.Concrete.Product>
@{
    ViewData["Title"] = ViewBag.Title ?? "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <div>
            <h4 class="fw-bold text-dark mb-0">@ViewData["Title"]</h4>
            <small class="text-muted">En yeni ürünlerimizi keşfedin</small>
        </div>
        <span class="badge bg-light text-dark border px-3 py-2 rounded-pill">
            @Model.Count ürün listeleniyor
        </span>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center py-5">
            <div class="mb-3">
                <i class="fas fa-search fa-3x text-muted opacity-25"></i>
            </div>
            <h5 class="text-muted">Aradığınız kriterlere uygun ürün bulunamadı.</h5>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark btn-sm mt-2 rounded-pill px-4">Ana Sayfaya Dön</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden product-card">

                        <div class="card-img-top position-relative p-4 d-flex align-items-center justify-content-center bg-white" style="height: 220px;">
                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="text-decoration-none w-100 h-100 d-flex align-items-center justify-content-center">
                                @if (string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <i class="fas fa-box fa-3x text-secondary opacity-25"></i>
                                }
                                else
                                {
                                    <img src="@item.ImageUrl" style="max-height: 100%; max-width: 100%; object-fit: contain;">
                                }
                            </a>
                            <span class="badge bg-light text-dark border position-absolute top-0 start-0 m-3 shadow-sm">
                                @(item.Category != null ? item.Category.Name : "Genel")
                            </span>
                        </div>

                        <div class="card-body d-flex flex-column bg-light bg-opacity-10 border-top">
                            <h6 class="card-title text-truncate fw-bold mb-1">
                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="text-dark text-decoration-none">
                                    @item.Name
                                </a>
                            </h6>

                            <div class="mb-3">
                                <span class="fw-bold text-primary fs-5">@item.Price.ToString("C2")</span>
                            </div>

                            <div class="mt-auto d-grid gap-2">
                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm rounded-3">
                                    <i class="fas fa-eye me-2"></i>Ürünü İncele
                                </a>

                                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-grid">
                                    <input type="hidden" name="productId" value="@item.Id" />
                                    <button type="submit" class="btn btn-primary btn-sm rounded-3">
                                        <i class="fas fa-shopping-basket me-2"></i>Sepete Ekle
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>