@model List<ShopVerse.Entities.Concrete.Product>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var categories = ViewBag.Categories as List<ShopVerse.Entities.Concrete.Category>;
    var activeCampaigns = ViewBag.ActiveCampaigns as List<ShopVerse.Entities.Concrete.Campaign>;
    var selectedCats = ViewData["SelectedCategories"] as List<int>;
    // Kupon değişkenini artık View içinde kullanmayacağız ama Controller'dan geliyor olabilir,
    // o yüzden tanımlı kalsa da olur veya silebilirsin. Şimdilik temiz kalsın.
}

<div class="container py-4">
    <div class="row">

        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 100px; z-index: 1;">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                    <h5 class="fw-bold mb-0"><i class="fas fa-filter me-2 text-primary"></i>Filtrele</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/Product/Index" method="get" id="filterForm">
                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase text-muted">Arama</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted"></i></span>
                                <input type="text" name="search" class="form-control bg-light border-start-0" placeholder="Ürün adı..." value="@ViewData["CurrentSearch"]">
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase text-muted mb-3">Kategoriler</label>
                            <div class="d-flex flex-column gap-2">
                                @if (categories != null)
                                {
                                    @foreach (var cat in categories)
                                    {
                                        var isChecked = selectedCats != null && selectedCats.Contains(cat.Id) ? "checked" : "";
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="categoryIds" value="@cat.Id" id="cat-@cat.Id" @isChecked>
                                            <label class="form-check-label" for="cat-@cat.Id">@cat.Name</label>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase text-muted">Fiyat Aralığı</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" name="minPrice" class="form-control form-control-sm" placeholder="Min TL" value="@ViewData["MinPrice"]">
                                </div>
                                <div class="col-6">
                                    <input type="number" name="maxPrice" class="form-control form-control-sm" placeholder="Max TL" value="@ViewData["MaxPrice"]">
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary rounded-3"><i class="fas fa-check me-2"></i>Uygula</button>
                            <a href="/Product/Index" class="btn btn-outline-secondary rounded-3 btn-sm">Temizle</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-9">

            <div class="d-flex justify-content-between align-items-center mb-4 bg-white p-3 rounded-4 shadow-sm border">
                <span class="fw-bold text-dark">
                    @Model.Count ürün listeleniyor
                </span>

                <div class="d-flex align-items-center gap-2">
                    <label class="small text-muted fw-bold text-nowrap">Sıralama:</label>
                    <select class="form-select form-select-sm border-0 bg-light" style="width: 160px;"
                            onchange="document.getElementById('sortOrderInput').value=this.value; document.getElementById('filterForm').submit();">
                        <option value="">Önerilen</option>
                        @{
                            var currentSort = ViewData["SortOrder"]?.ToString();
                        }
                        <!option value="price_asc" @(currentSort == "price_asc" ? "selected" : "")>Artan Fiyat</!option>
                        <!option value="price_desc" @(currentSort == "price_desc" ? "selected" : "")>Azalan Fiyat</!option>
                        <!option value="name_asc" @(currentSort == "name_asc" ? "selected" : "")>İsim (A-Z)</!option>
                    </select>
                </div>
            </div>

            <input type="hidden" name="sortOrder" id="sortOrderInput" form="filterForm" value="@currentSort">

            @if (Model.Count == 0)
            {
                <div class="text-center py-5 bg-white rounded-4 shadow-sm">
                    <div class="mb-3">
                        <div class="bg-light rounded-circle d-inline-flex p-4">
                            <i class="fas fa-search fa-3x text-secondary opacity-50"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold text-dark">Sonuç Bulunamadı</h5>
                    <p class="text-muted mb-0">Seçtiğiniz kriterlere uygun ürün mevcut değil.</p>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        // -----------------------------------------------------------
                        // EN İYİ FİYAT MANTIĞI
                        // -----------------------------------------------------------

                        // 1. Kampanya Fiyatı
                        ShopVerse.Entities.Concrete.Campaign? campaign = null;
                        decimal campaignPrice = item.Price; // Başlangıçta normal fiyat

                        if (activeCampaigns != null)
                        {
                            campaign = activeCampaigns.FirstOrDefault(c => c.TargetCategoryId == item.CategoryId || c.TargetCategoryId == null);
                            if (campaign != null)
                            {
                                campaignPrice = item.Price - (item.Price * campaign.DiscountPercentage / 100);
                            }
                        }

                        // 2. Ürün İndirimi Fiyatı
                        decimal productDiscountPrice = item.Price;
                        if (item.DiscountRate > 0)
                        {
                            productDiscountPrice = item.PriceWithDiscount;
                        }

                        // 3. Karşılaştır: Hangisi daha ucuz?
                        decimal finalPrice = item.Price;
                        bool showCampaignLabel = false;
                        bool showProductDiscountLabel = false;

                        if (campaign != null && item.DiscountRate > 0)
                        {
                            if (campaignPrice < productDiscountPrice)
                            {
                                finalPrice = campaignPrice;
                                showCampaignLabel = true;
                            }
                            else
                            {
                                finalPrice = productDiscountPrice;
                                showProductDiscountLabel = true;
                            }
                        }
                        else if (campaign != null)
                        {
                            finalPrice = campaignPrice;
                            showCampaignLabel = true;
                        }
                        else if (item.DiscountRate > 0)
                        {
                            finalPrice = productDiscountPrice;
                            showProductDiscountLabel = true;
                        }

                        // -----------------------------------------------------------

                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm position-relative product-card-hover">

                                <div class="position-absolute top-0 start-0 m-2 d-flex flex-column gap-1" style="z-index: 10;">

                                    @if (showCampaignLabel)
                                    {
                                        <span class="badge bg-danger shadow-sm" style="font-size: 0.75rem;">
                                            <i class="fas fa-fire me-1"></i>%@campaign.DiscountPercentage Kampanya
                                        </span>
                                    }
                                    else if (showProductDiscountLabel)
                                    {
                                        <span class="badge bg-warning text-dark shadow-sm" style="font-size: 0.75rem;">
                                            <i class="fas fa-arrow-down me-1"></i>%@item.DiscountRate İndirim
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success shadow-sm" style="font-size: 0.7rem;">YENİ</span>
                                    }

                                </div>

                                <a href="/Product/Detail/@item.Id" class="d-block overflow-hidden bg-white rounded-top p-3 text-center" style="height: 220px;">
                                    @if (string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <div class="h-100 d-flex align-items-center justify-content-center bg-light rounded">
                                            <i class="fas fa-image fa-3x text-secondary opacity-25"></i>
                                        </div>
                                    }
                                    else
                                    {
                                        <img src="@item.ImageUrl" alt="@item.Name"
                                             class="img-fluid h-100 w-auto"
                                             style="object-fit: contain; transition: transform 0.3s ease;">
                                    }
                                </a>

                                <div class="card-body d-flex flex-column border-top border-light">
                                    <small class="text-muted text-uppercase fw-bold mb-1" style="font-size: 0.7rem;">
                                        @item.Category?.Name
                                    </small>

                                    <a href="/Product/Detail/@item.Id" class="text-decoration-none text-dark">
                                        <h6 class="card-title fw-bold text-truncate" title="@item.Name">@item.Name</h6>
                                    </a>

                                    <div class="mt-auto pt-3 d-flex align-items-end justify-content-between">

                                        <div class="price-wrapper">
                                            @if (showCampaignLabel || showProductDiscountLabel)
                                            {
                                                <div class="d-flex flex-column">
                                                    <small class="text-decoration-line-through text-muted" style="font-size: 0.85rem;">
                                                        @item.Price.ToString("C0")
                                                    </small>
                                                    <span class="fw-bold text-danger fs-5">
                                                        @finalPrice.ToString("C0")
                                                    </span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="fw-bold text-primary fs-5">
                                                    @item.Price.ToString("C0")
                                                </span>
                                            }
                                        </div>

                                        <div class="d-flex gap-2">
                                            <a href="/Product/Detail/@item.Id"
                                               class="btn btn-outline-secondary btn-sm rounded-3"
                                               title="İncele">
                                                İncele
                                            </a>

                                            <button onclick="addToCart(@item.Id)"
                                                    class="btn btn-primary btn-sm rounded-3 shadow-sm px-3"
                                                    title="Sepete Ekle">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>