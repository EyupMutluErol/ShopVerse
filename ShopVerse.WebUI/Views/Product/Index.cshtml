@model List<ShopVerse.Entities.Concrete.Product>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var categories = ViewBag.Categories as List<ShopVerse.Entities.Concrete.Category>;
    var selectedCats = ViewData["SelectedCategories"] as List<int>;
}

<div class="container py-4">
    <div class="row">

        <div class="col-lg-3 mb-4">
            <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 100px; z-index: 1;">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4">
                    <h5 class="fw-bold mb-0"><i class="fas fa-filter me-2 text-primary"></i>Filtrele</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/Product/Index" method="get" id="filterForm">

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase text-muted">Arama</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-muted"></i></span>
                                <input type="text" name="search" class="form-control bg-light border-start-0"
                                       placeholder="Ürün adı..." value="@ViewData["CurrentSearch"]">
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase text-muted mb-3">Kategoriler</label>
                            <div class="d-flex flex-column gap-2">
                                @if (categories != null)
                                {
                                    @foreach (var cat in categories)
                                    {
                                        var isChecked = selectedCats != null && selectedCats.Contains(cat.Id) ? "checked" : "";
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="categoryIds"
                                                   value="@cat.Id" id="cat-@cat.Id" @isChecked>
                                            <label class="form-check-label" for="cat-@cat.Id">
                                                @cat.Name
                                            </label>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase text-muted">Fiyat Aralığı</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" name="minPrice" class="form-control form-control-sm"
                                           placeholder="Min TL" value="@ViewData["MinPrice"]">
                                </div>
                                <div class="col-6">
                                    <input type="number" name="maxPrice" class="form-control form-control-sm"
                                           placeholder="Max TL" value="@ViewData["MaxPrice"]">
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary rounded-3">
                                <i class="fas fa-check me-2"></i>Uygula
                            </button>
                            <a href="/Product/Index" class="btn btn-outline-secondary rounded-3 btn-sm">
                                Temizle
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-9">

            <div class="d-flex justify-content-between align-items-center mb-4 bg-white p-3 rounded-4 shadow-sm border">
                <span class="fw-bold text-dark">
                    @Model.Count ürün listeleniyor
                </span>

                <div class="d-flex align-items-center gap-2">
                    <label class="small text-muted fw-bold text-nowrap">Sıralama:</label>
                    <select class="form-select form-select-sm border-0 bg-light" style="width: 160px;"
                            onchange="document.getElementById('sortOrderInput').value=this.value; document.getElementById('filterForm').submit();">
                        <option value="">Önerilen</option>
                        @{
                            var currentSort = ViewData["SortOrder"]?.ToString();
                        }
                        <!option value="price_asc" @(currentSort == "price_asc" ? "selected" : "")>Artan Fiyat</!option>
                        <!option value="price_desc" @(currentSort == "price_desc" ? "selected" : "")>Azalan Fiyat</!option>
                        <!option value="name_asc" @(currentSort == "name_asc" ? "selected" : "")>İsim (A-Z)</!option>
                    </select>
                </div>
            </div>

            <input type="hidden" name="sortOrder" id="sortOrderInput" form="filterForm" value="@currentSort">

            @if (Model.Count == 0)
            {
                <div class="text-center py-5 bg-white rounded-4 shadow-sm">
                    <div class="mb-3">
                        <div class="bg-light rounded-circle d-inline-flex p-4">
                            <i class="fas fa-search fa-3x text-secondary opacity-50"></i>
                        </div>
                    </div>
                    <h5 class="fw-bold text-dark">Sonuç Bulunamadı</h5>
                    <p class="text-muted mb-0">Seçtiğiniz kriterlere uygun ürün mevcut değil.</p>
                </div>
            }
            else
            {
                <div class="row g-3">
                    @foreach (var item in Model)
                    {
                        <div class="col-6 col-md-4 col-lg-4">
                            <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden product-card">

                                <div class="card-img-top position-relative p-4 d-flex align-items-center justify-content-center bg-white" style="height: 200px;">
                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="text-decoration-none w-100 h-100 d-flex align-items-center justify-content-center">
                                        @if (string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <i class="fas fa-box fa-3x text-secondary opacity-25"></i>
                                        }
                                        else
                                        {
                                            <img src="@item.ImageUrl" style="max-height: 100%; max-width: 100%; object-fit: contain;">
                                        }
                                    </a>
                                    <span class="badge bg-light text-dark border position-absolute top-0 start-0 m-3 shadow-sm small">
                                        @(item.Category != null ? item.Category.Name : "Genel")
                                    </span>
                                </div>

                                <div class="card-body d-flex flex-column bg-light bg-opacity-10 border-top p-3">
                                    <h6 class="card-title text-truncate fw-bold mb-1" style="font-size: 0.95rem;">
                                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="text-dark text-decoration-none">
                                            @item.Name
                                        </a>
                                    </h6>

                                    <div class="mb-3">
                                        <span class="fw-bold text-primary">@item.Price.ToString("C2")</span>
                                    </div>

                                    <div class="mt-auto d-flex gap-2">
                                        <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm rounded-3 flex-grow-1">
                                            İncele
                                        </a>

                                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                            <input type="hidden" name="productId" value="@item.Id" />
                                            <button type="submit" class="btn btn-primary btn-sm rounded-3 shadow-sm px-3">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
