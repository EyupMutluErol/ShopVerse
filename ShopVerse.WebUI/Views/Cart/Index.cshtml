@model ShopVerse.WebUI.Models.CartViewModel

@{
    ViewData["Title"] = "Sepetim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 fw-bold">Alışveriş Sepetim</h2>

    @if (Model.CartItems.Count > 0)
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="bg-light">
                                    <tr>
                                        <th scope="col" class="ps-4">Ürün</th>
                                        <th scope="col" class="text-center">Fiyat</th>
                                        <th scope="col" class="text-center">Adet</th>
                                        <th scope="col" class="text-center">Toplam</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CartItems)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <img src="@item.Product.ImageUrl" alt="@item.Product.Name"
                                                         class="img-fluid rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                                    <div>
                                                        <h6 class="mb-0">
                                                            <a asp-controller="Product" asp-action="Detail" asp-route-id="@item.Product.Id" class="text-decoration-none text-dark">
                                                                @item.Product.Name
                                                            </a>
                                                        </h6>
                                                        <small class="text-muted">@item.Product.Category?.Name</small>
                                                    </div>
                                                </div>
                                            </td>

                                            <td class="text-center">
                                                @if (item.SalePrice < item.Product.Price)
                                                {
                                                    <div class="d-flex flex-column align-items-center">
                                                        <small class="text-muted text-decoration-line-through" style="font-size: 0.85rem;">
                                                            @item.Product.Price.ToString("C2")
                                                        </small>
                                                        <span class="text-danger fw-bold">
                                                            @item.SalePrice.ToString("C2")
                                                        </span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="fw-bold text-dark">
                                                        @item.Product.Price.ToString("C2")
                                                    </span>
                                                }
                                            </td>

                                            <td class="text-center">
                                                <div class="btn-group border rounded-pill" role="group">
                                                    <button type="button"
                                                            onclick="checkDecrease(@item.Product.Id, @item.Quantity)"
                                                            class="btn btn-sm btn-light rounded-start-pill px-3">
                                                        <i class="fas fa-minus small"></i>
                                                    </button>

                                                    <span class="btn btn-sm btn-light disabled fw-bold text-dark px-3" style="opacity: 1; border-left: 1px solid #dee2e6; border-right: 1px solid #dee2e6;">
                                                        @item.Quantity
                                                    </span>

                                                    <a asp-controller="Cart" asp-action="Increase" asp-route-productId="@item.Product.Id"
                                                       class="btn btn-sm btn-light rounded-end-pill px-3">
                                                        <i class="fas fa-plus small"></i>
                                                    </a>
                                                </div>
                                            </td>

                                            <td class="text-center fw-bold text-primary">
                                                @item.TotalPrice.ToString("C2")
                                            </td>

                                            <td class="text-end pe-4">
                                                <button onclick="deleteFromCart(@item.Product.Id)" class="btn btn-sm btn-outline-danger rounded-circle" style="width: 32px; height: 32px;">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">
                        <i class="fas fa-arrow-left me-2"></i> Alışverişe Devam Et
                    </a>
                </div>
            </div>

            <div class="col-lg-4 mt-4 mt-lg-0">
                <div class="card border-0 shadow-sm bg-light">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">Sipariş Özeti</h5>

                        <div class="mb-4">
                            @if (ViewBag.CouponCode == null)
                            {
                                <form asp-action="ApplyCoupon" asp-controller="Cart" method="post">
                                    <label class="form-label small text-muted fw-bold">İndirim Kuponu</label>
                                    <div class="input-group">
                                        <input type="text" name="code" class="form-control" placeholder="Kod Giriniz" required>
                                        <button class="btn btn-dark" type="submit">Uygula</button>
                                    </div>
                                    @if (TempData["Error"] != null)
                                    {
                                        <div class="text-danger small mt-1">
                                            <i class="fas fa-exclamation-circle me-1"></i>@TempData["Error"]
                                        </div>
                                    }
                                    @if (TempData["Success"] != null)
                                    {
                                        <div class="text-success small mt-1">
                                            <i class="fas fa-check-circle me-1"></i>@TempData["Success"]
                                        </div>
                                    }
                                </form>
                            }
                            else
                            {
                                <div class="alert alert-success d-flex justify-content-between align-items-center py-2 px-3 mb-0 shadow-sm">
                                    <div class="small">
                                        <i class="fas fa-ticket-alt me-2"></i>
                                        <strong>@ViewBag.CouponCode</strong> uygulandı.
                                    </div>
                                    <a href="/Cart/RemoveCoupon" class="text-danger small text-decoration-none fw-bold" title="Kaldır">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </div>
                            }
                        </div>

                        <hr class="text-muted">

                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Ara Toplam</span>
                            <span class="fw-bold">
                                @if (ViewBag.TotalPrice != null)
                                {
                                    @(((decimal)ViewBag.TotalPrice).ToString("C2"))
                                }
                                else
                                {
                                    @Model.SubTotal.ToString("C2")
                                }
                            </span>
                        </div>

                        <div class="d-flex justify-content-between mb-2 align-items-center">
                            <span class="text-muted">Kargo</span>
                            @if (ViewBag.FinalPrice >= 500 || (ViewBag.FinalPrice == null && Model.SubTotal >= 500))
                            {
                                <div>
                                    <span class="text-decoration-line-through text-muted small me-2">39,90 ₺</span>
                                    <span class="text-success fw-bold">Bedava</span>
                                </div>
                            }
                            else
                            {
                                <span class="fw-bold text-dark">39,90 ₺</span>
                            }
                        </div>

                        @if (ViewBag.DiscountAmount != null && (decimal)ViewBag.DiscountAmount > 0)
                        {
                            <div class="d-flex justify-content-between mb-2 align-items-center text-success">
                                <span><i class="fas fa-tags me-1"></i>İndirim</span>
                                <span class="fw-bold">-@(((decimal)ViewBag.DiscountAmount).ToString("C2"))</span>
                            </div>
                        }

                        <hr>

                        <div class="d-flex justify-content-between mb-4">
                            <div>
                                <span class="h5 fw-bold">Toplam</span>
                                <div class="small text-muted" style="font-size: 0.75rem;">(KDV Dahil)</div>
                            </div>

                            @{
                                // Kargo Dahil Son Fiyat Hesabı
                                decimal cartTotal = ViewBag.FinalPrice != null ? (decimal)ViewBag.FinalPrice : Model.SubTotal;
                                decimal shipping = cartTotal >= 500 ? 0 : 39.90m;
                                decimal grandTotal = cartTotal + shipping;
                            }

                            <span class="h4 fw-bold text-primary">@grandTotal.ToString("C2")</span>
                        </div>

                        @if (shipping > 0)
                        {
                            <div class="alert alert-warning py-2 small mb-4">
                                <i class="fas fa-info-circle me-1"></i>
                                Sepetini <strong>@((500 - cartTotal).ToString("C2"))</strong> daha doldur, kargo bedava olsun!
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success py-2 small mb-4">
                                <i class="fas fa-check-circle me-1"></i>
                                Tebrikler! Kargo bedava hakkı kazandınız.
                            </div>
                        }

                        <a asp-controller="Checkout" asp-action="Index" class="btn btn-dark w-100 btn-lg py-3 shadow-sm">
                            Sepeti Onayla <i class="fas fa-check ms-2"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-shopping-basket fa-4x text-muted opacity-50"></i>
            </div>
            <h3 class="fw-bold">Sepetiniz Boş</h3>
            <p class="text-muted mb-4">Sepetinizde henüz ürün bulunmamaktadır.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                Hemen Alışverişe Başla
            </a>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function deleteFromCart(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu ürünü sepetten kaldırmak istediğinize emin misiniz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, Sil!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/Cart/RemoveFromCart?productId=" + id;
                }
            })
        }

        function checkDecrease(id, quantity) {
            if (quantity > 1) {
                window.location.href = "/Cart/Decrease?productId=" + id;
            } else {
                deleteFromCart(id);
            }
        }
    </script>

    @if (TempData["Message"] != null)
    {
        var rawMessage = Html.Raw(TempData["Message"]);
        var iconType = TempData["Icon"];

        <script>
            Swal.fire({
                icon: '@iconType',
                title: 'Bilgi',
                text: '@rawMessage',
                timer: 2000,
                showConfirmButton: false
            });
        </script>
    }
}