@model CheckoutViewModel

@{
    ViewData["Title"] = "Güvenli Ödeme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .credit-card-box {
        background: linear-gradient(135deg, #2c3e50 0%, #000000 100%);
        border-radius: 15px;
        padding: 30px;
        color: white;
        box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }

        .credit-card-box label {
            color: #adb5bd;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .credit-card-box .form-control {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: #fff;
            font-family: 'Courier New', monospace;
            letter-spacing: 1px;
            font-size: 0.95rem;
        }

            .credit-card-box .form-control:focus {
                background: rgba(255, 255, 255, 0.25);
                border-color: #fff;
                box-shadow: none;
                color: #fff;
            }

            .credit-card-box .form-control::placeholder {
                color: rgba(255, 255, 255, 0.3);
            }

    .summary-card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        background: #fff;
        position: sticky;
        top: 20px;
    }

    .summary-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #eee;
        padding: 15px 20px;
        border-radius: 12px 12px 0 0;
    }

    .form-control.is-valid {
        border-color: #198754;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3e%3cpath fill='%23198754' d='M2.3 6.73L.6 4.53c-.4-1.04.46-1.4 1.1-.8l1.1 1.4 3.4-3.8c.6-.63 1.6-.27 1.2.7l-4 4.6c-.43.5-.8.4-1.1.1z'/%3e%3c/svg%3e");
        background-repeat: no-repeat;
        background-position: right 5px center !important;
        background-size: calc(.75em + .375rem) calc(.75em + .375rem);
    }

    .credit-card-box .form-control.is-valid {
        padding-right: 30px !important; 
        text-align: left !important; 
        padding-left: 10px !important;
    }
</style>

<div class="container py-5">

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger shadow-sm border-0 rounded-3 mb-4">
            <h6 class="alert-heading fw-bold"><i class="fas fa-exclamation-circle me-2"></i>Lütfen aşağıdaki hataları düzeltiniz:</h6>
            <ul class="mb-0 small ps-3">
                @foreach (var key in ViewData.ModelState.Keys)
                {
                    foreach (var error in ViewData.ModelState[key].Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <form asp-controller="Checkout" asp-action="ProcessPayment" method="post" id="checkoutForm" class="needs-validation" novalidate>
        <div class="row g-4">

            <div class="col-lg-8">

                <div class="card shadow-sm border-0 mb-4 rounded-3">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-map-marker-alt me-2"></i>Teslimat Bilgileri</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FullName" class="form-control" placeholder="Ad Soyad" value="@(Model.User?.Name != null ? Model.User.Name + " " + Model.User.Surname : "")">
                                    <label asp-for="FullName">Ad Soyad</label>
                                </div>
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" asp-for="PhoneNumber" id="phoneInput" class="form-control" placeholder="555 444 33 22" maxlength="13" value="@Model.User?.PhoneNumber" />
                                    <label asp-for="PhoneNumber">Telefon Numarası</label>
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="City" id="citySelect" class="form-select" required>
                                        <option value="">Seçiniz</option>
                                    </select>
                                    <label asp-for="City">Şehir</label>
                                </div>
                                <span asp-validation-for="City" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="District" id="districtSelect" class="form-select" disabled required>
                                        <option value="">Önce İl Seçiniz</option>
                                    </select>
                                    <label asp-for="District">İlçe</label>
                                </div>
                                <span asp-validation-for="District" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="AddressLine" class="form-control" style="height: 100px" placeholder="Adres"></textarea>
                                    <label asp-for="AddressLine">Açık Adres (Mahalle, Sokak, No vb.)</label>
                                </div>
                                <span asp-validation-for="AddressLine" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0 fw-bold text-primary"><i class="fas fa-credit-card me-2"></i>Ödeme Yöntemi</h5>
                    </div>
                    <div class="card-body p-4">

                        <div class="credit-card-box">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <i class="fas fa-sim-card fa-2x text-warning"></i>
                                <i class="fab fa-cc-mastercard fa-2x text-white opacity-75"></i>
                            </div>

                            <div class="mb-4">
                                <label class="form-label d-block mb-1">Kart Numarası</label>
                                <input type="text" asp-for="CardNumber" id="cardNumber" class="form-control form-control-lg border-0" placeholder="0000 0000 0000 0000" maxlength="19" required>
                                <span asp-validation-for="CardNumber" class="text-danger small bg-white px-1 rounded mt-1 d-inline-block"></span>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Kart Üzerindeki İsim</label>
                                    <input type="text" asp-for="CardName" class="form-control text-uppercase" placeholder="AD SOYAD" required>
                                    <span asp-validation-for="CardName" class="text-danger small bg-white px-1 rounded mt-1 d-inline-block"></span>
                                </div>

                                <div class="col-6 col-md-3">
                                    <label class="form-label">SKT (Ay/Yıl)</label>
                                    <div class="d-flex gap-2">
                                        <input type="text" asp-for="ExpirationMonth" id="expMonth" class="form-control px-2" placeholder="AA" maxlength="2" required>
                                        <input type="text" asp-for="ExpirationYear" id="expYear" class="form-control px-2" placeholder="YYYY" maxlength="4" required>
                                    </div>
                                    <span asp-validation-for="ExpirationMonth" class="text-danger small bg-white px-1 rounded mt-1 d-inline-block"></span>
                                </div>

                                <div class="col-6 col-md-3">
                                    <label class="form-label">CVV <i class="fas fa-question-circle small ms-1" title="Arkadaki son 3 hane"></i></label>
                                    <input type="text" asp-for="Cvv" id="cvv" class="form-control" placeholder="000" maxlength="3" required>
                                    <span asp-validation-for="Cvv" class="text-danger small bg-white px-1 rounded mt-1 d-inline-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3 text-center text-muted small">
                            <i class="fas fa-lock me-1"></i> Ödemeniz 256-bit SSL sertifikası ile korunmaktadır.
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-4">
                <div class="summary-card">
                    <div class="summary-header">
                        <h5 class="mb-0 fw-bold">Sipariş Özeti</h5>
                    </div>
                    <div class="p-4">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Ürünler (@Model.CartItems.Sum(x => x.Quantity) Adet)</span>
                            <span class="fw-bold">@Model.SubTotal.ToString("C2")</span>
                        </div>

                        @if (Model.ShippingTotal == 0)
                        {
                            <div class="d-flex justify-content-between mb-3">
                                <span class="text-muted">Kargo</span>
                                <span class="text-success fw-bold">Bedava</span>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex justify-content-between mb-3">
                                <span class="text-muted">Kargo</span>
                                <span>@Model.ShippingTotal.ToString("C2")</span>
                            </div>
                        }

                        @if (Model.DiscountAmount > 0)
                        {
                            <div class="d-flex justify-content-between mb-3 text-success">
                                <span><i class="fas fa-ticket-alt me-1"></i>Kupon İndirimi</span>
                                <span>-@Model.DiscountAmount.ToString("C2")</span>
                            </div>
                        }

                        <hr>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="fs-5 fw-bold text-dark">Toplam</span>
                            <span class="fs-4 fw-bold text-primary">@Model.GrandTotal.ToString("C2")</span>
                        </div>

                        <div class="accordion mb-4" id="cartAccordion">
                            <div class="accordion-item border-0">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed bg-light rounded shadow-none py-2" type="button" data-bs-toggle="collapse" data-bs-target="#cartItemsCollapse">
                                        <small>Sepetteki Ürünleri Göster</small>
                                    </button>
                                </h2>
                                <div id="cartItemsCollapse" class="accordion-collapse collapse" data-bs-parent="#cartAccordion">
                                    <div class="accordion-body px-0">
                                        <ul class="list-group list-group-flush">
                                            @foreach (var item in Model.CartItems)
                                            {
                                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                                    <div class="d-flex align-items-center">
                                                        <span class="badge bg-secondary me-2 rounded-pill">@item.Quantity</span>
                                                        <span class="text-truncate" style="max-width: 150px;" title="@item.Product.Name">@item.Product.Name</span>
                                                    </div>
                                                    <span class="small text-muted">@((item.Quantity * item.SalePrice).ToString("C2"))</span>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success w-100 btn-lg py-3 shadow fw-bold transition-btn">
                            <i class="fas fa-check-circle me-2"></i> @Model.GrandTotal.ToString("C2") Ödemeyi Tamamla
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

